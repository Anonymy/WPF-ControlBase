<UserControl x:Class="HeBianGu.App.Manager.View.Panel.ContainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:ContainPanelSample}">
            <Grid>
                <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}">
                    <Border.Background>
                        <SolidColorBrush Color="Yellow" Opacity="0.5"/>
                    </Border.Background>
                </Border>
                
                <h:FButton Click="Button_CP_Click_Close" FIconSize="25" Style="{StaticResource S.FButton.Close}" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTip="Close" />

                <h:FButton Click="Button_CP_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="添加"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer>
        <Grid>
            <GroupBox Header="ContainPanel">
                <Grid>
                    <h:ContainPanel x:Name="cp" Background="{DynamicResource {x:Static h:BrushKeys.DialogCover}}">
                        <h:ContainPanel.AnimationAction>
                            <h:ScaleTransition/>
                        </h:ContainPanel.AnimationAction>

                        <Grid>
                            <h:FButton HorizontalAlignment="Center" VerticalAlignment="Center"
                    Content="Show"
                    Click="Button_CP_Click" />
                        </Grid>
                    </h:ContainPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>
