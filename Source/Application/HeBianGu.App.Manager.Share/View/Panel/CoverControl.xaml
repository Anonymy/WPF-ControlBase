<UserControl x:Class="HeBianGu.App.Manager.View.Panel.CoverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource S.FButton.Style.Default}" TargetType="h:FButton">
            <Setter Property="Height" Value="400" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Command" Value="{x:Static h:CommandService.Selected}" />
            <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Mode=Self}}" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel>
            <UniformGrid Columns="2">
                <GroupBox Height="500" Header="CoverCanvas">
                    <h:CoverPanel>
                        <h:FButton Width="300" Height="400" Background="Purple" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Blue" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Purple" />
                    </h:CoverPanel>
                </GroupBox>

                <GroupBox Header="CoverCanvas">
                    <h:CoverPanel PressValue="0.6" ScaleMin="0.3">
                        <h:FButton Width="300" Height="400" Background="Purple" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Blue" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Purple" />
                    </h:CoverPanel>
                </GroupBox>

                <GroupBox Header="CoverCanvas">
                    <h:CoverPanel PressValue="0.6" ScaleMin="0.1">
                        <h:FButton Width="300" Height="400" Background="Purple" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Blue" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Purple" />
                    </h:CoverPanel>
                </GroupBox>

                <GroupBox Header="CoverCanvas">
                    <h:CoverPanel PressValue="0.8" ScaleMin="0.3">
                        <h:FButton Width="300" Height="400" Background="Purple" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Blue" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Purple" />
                    </h:CoverPanel>
                </GroupBox>

                <GroupBox Header="CoverCanvas">
                    <h:CoverPanel VerticalContentAlignment="Bottom" PressValue="0.8" ScaleMin="0.3">
                        <h:FButton Width="300" Height="400" Background="Purple" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Blue" />
                        <h:FButton Width="300" Height="400" Background="Beige" />
                        <h:FButton Width="300" Height="400" Background="Green" />
                        <h:FButton Width="300" Height="400" Background="Orange" />
                        <h:FButton Width="300" Height="400" Background="Red" />
                        <h:FButton Width="300" Height="400" Background="Gray" />
                        <h:FButton Width="300" Height="400" Background="Purple" />
                    </h:CoverPanel>
                </GroupBox>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
