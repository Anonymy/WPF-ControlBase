<UserControl x:Class="HeBianGu.App.Manager.View.Panel.AreaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="h:FButton" BasedOn="{StaticResource S.FButton.Style.Default}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <UniformGrid Columns="2">
                <GroupBox Header="GridAreaAttach" Height="500">
                    <Grid h:GridAreaAttach.TemplateArea="
            Area1 Area1 Area1
            Area2 Area5 Area3
            Area4 Area4 Area4">
                        <h:FButton Content="1"  h:GridAreaAttach.AreaName="Area1" />
                        <h:FButton Content="2"    h:GridAreaAttach.AreaName="Area2" />
                        <h:FButton Content="3" h:GridAreaAttach.AreaName="Area3" />
                        <h:FButton Content="4" h:GridAreaAttach.AreaName="Area5" />
                        <h:FButton Content="5"  h:GridAreaAttach.AreaName="Area4" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="GridAreaAttach">
                    <Grid h:GridAreaAttach.TemplateArea="
            Area2 Area1 Area1/
            Area2 Area5 Area3/
            Area4 Area4 Area4/
                          ">
                        <h:FButton Content="ToolBar"  h:GridAreaAttach.AreaName="Area1" />
                        <h:FButton Content="LeftMenu"    h:GridAreaAttach.AreaName="Area2" />
                        <h:FButton Content="PropertyGrid" h:GridAreaAttach.AreaName="Area3" />
                        <h:FButton Content="Content" h:GridAreaAttach.AreaName="Area5" />
                        <h:FButton Content="StateBar"  h:GridAreaAttach.AreaName="Area4" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="GridAreaAttach">
                    <Grid h:GridAreaAttach.TemplateArea="
            Area2 Area1 Area1/
            Area2 Area5 Area3/
            Area2 Area5 Area3/
            Area2 Area5 Area3/
            Area2 Area5 Area3/
            Area2 Area5 Area3/                          
            Area4 Area4 Area4/
                          ">
                        <h:FButton Content="ToolBar"  h:GridAreaAttach.AreaName="Area1" />
                        <h:FButton Content="LeftMenu"    h:GridAreaAttach.AreaName="Area2" />
                        <h:FButton Content="PropertyGrid" h:GridAreaAttach.AreaName="Area3" />
                        <h:FButton Content="Content" h:GridAreaAttach.AreaName="Area5" />
                        <h:FButton Content="StateBar"  h:GridAreaAttach.AreaName="Area4" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="GridAreaAttach">
                    <Grid h:GridAreaAttach.TemplateArea="
            Area2 Area1 Area1 Area1 Area1 Area1 Area1 Area1/
            Area2 Area5 Area5 Area5 Area5 Area5 Area5 Area3/
            Area2 Area5 Area5 Area5 Area5 Area5 Area5 Area3/
            Area2 Area5 Area5 Area5 Area5 Area5 Area5 Area3/
            Area2 Area5 Area5 Area5 Area5 Area5 Area5 Area3/
            Area2 Area5 Area5 Area5 Area5 Area5 Area5 Area3/                          
            Area4 Area4 Area4 Area4 Area4 Area4 Area4 Area4/
                          ">
                        <h:FButton Content="ToolBar"  h:GridAreaAttach.AreaName="Area1" />
                        <h:FButton Content="LeftMenu"    h:GridAreaAttach.AreaName="Area2" />
                        <h:FButton Content="PropertyGrid" h:GridAreaAttach.AreaName="Area3" />
                        <h:FButton Content="Content" h:GridAreaAttach.AreaName="Area5" />
                        <h:FButton Content="StateBar"  h:GridAreaAttach.AreaName="Area4" />
                    </Grid>
                </GroupBox>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
