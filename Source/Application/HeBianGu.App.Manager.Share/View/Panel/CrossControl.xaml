<UserControl x:Class="HeBianGu.App.Manager.View.Panel.CrossControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="h:FButton" BasedOn="{StaticResource S.FButton.Style.Transparent}">
            <Setter Property="FIconSize" Value="53"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Icon" Value="&#xe67f;"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <UniformGrid>
                <GroupBox Header="CrossPanel" Height="900">
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:CrossPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top">
                                        <h:FButton Style="{StaticResource S.FButton.Style.Transparent}" 
                                                   Command="{x:Static h:CommandService.Prev}" 
                                                   Grid.Column="0" Icon="&#xe8b7;" 
                                                   CommandTarget="{Binding ElementName=items,Converter={x:Static h:XConverter.ItemPanelConverter}}"/>

                                        <h:FButton Style="{StaticResource S.FButton.Style.Transparent}" 
                                                   Command="{x:Static h:CommandService.Next}" 
                                                   Grid.Column="1" Icon="&#xe8b6;" 
                                                   CommandTarget="{Binding ElementName=items,Converter={x:Static h:XConverter.ItemPanelConverter}}"/>
                                    </h:Row>

                                    <ItemsPresenter x:Name="items"/>
                                </DockPanel>
                            </ControlTemplate>
                        </ItemsControl.Template>

                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <Grid Background="Orange"/>
                    </ItemsControl>
                </GroupBox>

                <GroupBox Header="CrossPanel">
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:CrossPanel IsAnimation="False"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <DockPanel>
                                    <h:Row DockPanel.Dock="Top">
                                        <h:FButton Style="{StaticResource S.FButton.Style.Transparent}" 
                                                   Command="{x:Static h:CommandService.Prev}" 
                                                   Grid.Column="0" Icon="&#xe8b7;" 
                                                   CommandTarget="{Binding ElementName=items,Converter={x:Static h:XConverter.ItemPanelConverter}}"/>

                                        <h:FButton Style="{StaticResource S.FButton.Style.Transparent}" 
                                                   Command="{x:Static h:CommandService.Next}" 
                                                   Grid.Column="1" Icon="&#xe8b6;" 
                                                   CommandTarget="{Binding ElementName=items,Converter={x:Static h:XConverter.ItemPanelConverter}}"/>
                                    </h:Row>

                                    <ItemsPresenter x:Name="items"/>
                                </DockPanel>
                            </ControlTemplate>
                        </ItemsControl.Template>

                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <Grid Background="Purple"/>
                        <Grid Background="Green"/>
                        <Grid Background="Orange"/>
                        <Grid Background="Gray"/>
                        <Grid Background="Red"/>
                        <Grid Background="Blue"/>
                        <!--<Grid Background="Orange"/>-->
                    </ItemsControl>
                </GroupBox>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
