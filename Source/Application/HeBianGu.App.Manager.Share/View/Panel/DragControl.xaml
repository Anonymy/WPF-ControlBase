<UserControl x:Class="HeBianGu.App.Manager.View.Panel.DragControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="h:FButton" BasedOn="{StaticResource S.FButton.Style.Default}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <Grid>
                <GroupBox Header="DraggPanel - Items">
                    <ListBox Style="{DynamicResource {x:Static h:ListBoxKeys.Single}}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:DragPanel ItemSeparation="2" ItemsHeight="220" ItemsWidth="220"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton Content="1"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="2"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="3"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="4"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="5"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="6"/>
                        </Grid>
                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="7"/>
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="8"/>
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="9"/>
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="10"/>
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="11"/>
                        </Grid>

                        <Grid Width="200" Height="200" Background="Transparent">
                            <h:FButton  Content="12"/>
                        </Grid>
                    </ListBox>
                </GroupBox>
            </Grid>

            <Grid>
                <GroupBox Header="DraggPanel - ItemSource">
                    <ListBox Style="{DynamicResource {x:Static h:ListBoxKeys.Single}}" ItemsSource="{Binding Collection}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <h:DragPanel ItemSeparation="2" ItemsHeight="220" ItemsWidth="220"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type h:TestViewModel}">
                                <Grid Width="200" Height="200" Background="Transparent">
                                    <h:FButton Content="{Binding Value}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
