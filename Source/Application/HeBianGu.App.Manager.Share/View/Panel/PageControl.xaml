<UserControl x:Class="HeBianGu.App.Manager.View.Panel.PageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Manager.View.Panel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource S.FButton.Style.Default}" TargetType="h:FButton">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="FontSize" Value="85" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel>
            <GroupBox Height="800" Header="None">
                <Grid>
                    <h:PagePanel x:Name="pp" Duration="1000">
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>

            <GroupBox Height="800" Header="AngleAction">
                <Grid>
                    <h:PagePanel x:Name="pp1" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:AngleTransition Duration="1000" />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp1}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp1}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>

            <GroupBox Height="800" Header="OpacityAction">
                <Grid>
                    <h:PagePanel x:Name="pp5" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:OpacityTransition />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp5}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp5}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>

            <GroupBox Height="800" Header="ScaleAction">
                <Grid>
                    <h:PagePanel x:Name="pp2" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:ScaleTransition />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp2}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp2}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>

            <GroupBox Height="800" Header="HorizontalAction">
                <Grid>
                    <h:PagePanel x:Name="pp3" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:HorizontalTransition Duration="1000" />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp3}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp3}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>
            <GroupBox Height="800" Header="VerticalAction">
                <Grid>
                    <h:PagePanel x:Name="pp4" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:VerticalTransition Duration="1000" />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp4}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp4}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />

                </Grid>
            </GroupBox>
            <GroupBox Height="800" Header="SKewAction">
                <Grid>
                    <h:PagePanel x:Name="pp6" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:SkewTransition EndAngleX="0"
                                              EndAngleY="0"
                                              StartAngleX="90"
                                              StartAngleY="90"
                                              Duration="1000" />
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1" />
                        <h:FButton Background="Red" Content="2" />
                        <h:FButton Background="Green" Content="3" />
                        <h:FButton Background="Blue" Content="4" />
                        <h:FButton Background="Yellow" Content="5" />
                        <h:FButton Background="Orange" Content="6" />
                    </h:PagePanel>

                    <h:FButton CommandTarget="{Binding ElementName=pp6}" Icon="&#xe9be;" Style="{StaticResource S.FButton.Left}" />
                    <h:FButton CommandTarget="{Binding ElementName=pp6}" Icon="&#xe9bf;" Style="{StaticResource S.FButton.Right}" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
