<Page x:Class="WpfControlDemo.View.CheckBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:h="https://github.com/HeBianGu"
      xmlns:local="clr-namespace:WpfControlDemo.View"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="CheckBoxPage"
      d:DesignHeight="1000"
      d:DesignWidth="1000"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel>
            <h:Interaction.Behaviors>
                <h:FluidMoveBehavior AppliesTo="Self" FloatAbove="True" Duration="00:00:01" />
            </h:Interaction.Behaviors>
            <GroupBox Header="复选按钮 - FCheckBox">
                <UniformGrid Columns="6">
                    <CheckBox Margin="3">记住密码</CheckBox>
                    <CheckBox Margin="3" IsChecked="{x:Null}">其他</CheckBox>
                    <CheckBox Margin="3" IsEnabled="False">禁用</CheckBox>
                    <CheckBox Margin="3" IsChecked="{x:Null}" IsEnabled="False">禁用</CheckBox>
                    <CheckBox Margin="3" IsChecked="True" IsEnabled="False">禁用</CheckBox>
                    <CheckBox Width="100"
                                 Margin="3"
                                 h:Cattach.AllowsAnimation="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                                 IsChecked="True">
                        旋转
                    </CheckBox>

                </UniformGrid>
            </GroupBox>

            <GroupBox Header="单选按钮 - RadioButton">
                <StackPanel>
                    <RadioButton Margin="3" HorizontalAlignment="Center" h:Cattach.IconSize="18">十八</RadioButton>
                    <RadioButton Margin="3"
                                 HorizontalAlignment="Center"
                                 h:Cattach.IconSize="18"
                                 IsEnabled="False">
                        禁用
                    </RadioButton>
                    <!--<RadioButton Margin="3" IsChecked="True" h:Cattach.AllowsAnimation="{Binding IsChecked,RelativeSource={RelativeSource Self}}">旋转</RadioButton>-->
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 IsChecked="True"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期一
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期二
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期三
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期四
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期五
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期六
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="1"
                                 GroupName="ss"
                                 Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}">
                        星期日
                    </RadioButton>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="状态按钮 - ToggleButton">
                <UniformGrid Columns="5">
                    <ToggleButton h:Cattach.IconSize="40"
                                  h:Cattach.Icon="&#xe6d2;"
                                  Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}"
                                  Style="{DynamicResource {x:Static h:ToggleButtonKeys.BrushFIconChecked}}" />

                    <ToggleButton Grid.Column="3"
                                  h:Cattach.IconSize="40"
                                  IsChecked="True"
                                  Style="{DynamicResource {x:Static h:ToggleButtonKeys.DoubleFIconChecked}}" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="状态按钮 - BulletCheckBox">
                <UniformGrid Columns="5">
                    <h:BulletCheckBox />
                    <h:BulletCheckBox CheckedText="开启" IsChecked="True" Text="关闭" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="状态按钮 - SwitchToggleButton">
                <UniformGrid Columns="5">
                    <h:SwitchToggleButton Margin="10" Content="" IsEnabled="False" />
                    <h:SwitchToggleButton Margin="10"
                                          Content=""
                                          IsChecked="true"
                                          IsEnabled="False" />
                    <h:SwitchToggleButton Margin="10"
                                          Content=""
                                          IsChecked="true"
                                          TextHorizontalAlignment="Right" />
                    <h:SwitchToggleButton x:Name="ts"
                                          Margin="10"
                                          Content=""
                                          CornerRadius="100" />
                    <h:SwitchToggleButton BorderCornerRadius="3" Content="" CornerRadius="2" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="状态按钮 - ToggleSwitch">
                <UniformGrid Columns="5">
                    <UniformGrid.Resources>
                        <LinearGradientBrush x:Key="CheckedStateBrush" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0" Color="#1E41A5" />
                            <GradientStop Offset="0.5" Color="#2F6AEA" />
                            <GradientStop Offset="1" Color="#6298FE" />
                        </LinearGradientBrush>
                        <LinearGradientBrush x:Key="UncheckedStateBrush" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF81230E" />
                            <GradientStop Offset="0.365" Color="#FFF15910" />
                            <GradientStop Offset="1" Color="#FFF5A782" />
                        </LinearGradientBrush>
                        <LinearGradientBrush x:Key="UncheckedStateBrushBW" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0.004" Color="#FF454343" />
                            <GradientStop Offset="0.364" Color="#FFB8B8B8" />
                            <GradientStop Offset="1" Color="#F1F1F1" />
                        </LinearGradientBrush>
                    </UniformGrid.Resources>

                    <h:ToggleSwitch x:Name="toggleSwitch3"
                                    Width="98"
                                    Height="37"
                                    Padding="0"
                                    Background="Black"
                                    BorderThickness="2"
                                    CheckedForeground="White"
                                    CheckedText=""
                                    CornerRadius="10"
                                    FontFamily="Tahoma"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    ThumbBorderThickness="2"
                                    ThumbCornerRadius="7"
                                    ThumbGlowColor="Gray"
                                    ThumbShineCornerRadius="6,6,3,3"
                                    ThumbWidth="70"
                                    UncheckedBackground="{DynamicResource UncheckedStateBrush}"
                                    UncheckedForeground="Black"
                                    UncheckedText="">
                        <h:ToggleSwitch.CheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#FF106011" />
                                <GradientStop Offset="0.496" Color="#FF1DB43B" />
                                <GradientStop Offset="1" Color="#FF62FE7A" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.CheckedBackground>
                        <h:ToggleSwitch.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Offset="0" Color="#959595" />
                                <GradientStop Offset="0.5" Color="#A1A1A1" />
                                <GradientStop Offset="1" Color="#555555" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.BorderBrush>
                        <h:ToggleSwitch.ThumbBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#C1C1C1" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#FCFCF6" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBackground>
                        <h:ToggleSwitch.ThumbBorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#F6F6F6" />
                                <GradientStop Offset="0.5" Color="#959595" />
                                <GradientStop Offset="1" Color="#565656" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBorderBrush>
                    </h:ToggleSwitch>
                    <h:ToggleSwitch x:Name="toggleSwitch1"
                                    Width="98"
                                    Height="37"
                                    Padding="0"
                                    Background="Black"
                                    BorderThickness="2"
                                    CheckedForeground="White"
                                    CheckedText="Yes"
                                    CornerRadius="19"
                                    FontFamily="Tahoma"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    ThumbBorderThickness="2"
                                    ThumbCornerRadius="21"
                                    ThumbGlowColor="Gray"
                                    ThumbShineCornerRadius="20,20,0,0"
                                    ThumbWidth="35"
                                    UncheckedBackground="{StaticResource UncheckedStateBrush}"
                                    UncheckedForeground="Black"
                                    UncheckedText="No">
                        <h:ToggleSwitch.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Offset="0" Color="#959595" />
                                <GradientStop Offset="0.5" Color="#A1A1A1" />
                                <GradientStop Offset="1" Color="#555555" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.BorderBrush>
                        <h:ToggleSwitch.CheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#1E41A5" />
                                <GradientStop Offset="0.5" Color="#2F6AEA" />
                                <GradientStop Offset="1" Color="#6298FE" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.CheckedBackground>
                        <h:ToggleSwitch.ThumbBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#C1C1C1" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#FCFCF6" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBackground>
                        <h:ToggleSwitch.ThumbBorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#F6F6F6" />
                                <GradientStop Offset="0.5" Color="#959595" />
                                <GradientStop Offset="1" Color="#565656" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBorderBrush>
                    </h:ToggleSwitch>
                    <h:ToggleSwitch x:Name="toggleSwitch2"
                                    Width="98"
                                    Height="37"
                                    Padding="0"
                                    Background="Black"
                                    BorderThickness="2"
                                    CheckedForeground="White"
                                    CheckedText="True"
                                    CornerRadius="10"
                                    FontFamily="Tahoma"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    ThumbBorderThickness="2"
                                    ThumbCornerRadius="7"
                                    ThumbGlowColor="Gray"
                                    ThumbShineCornerRadius="6,6,3,3"
                                    ThumbWidth="25"
                                    UncheckedForeground="Black"
                                    UncheckedText="False">
                        <h:ToggleSwitch.UncheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="#626262" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#F1F1F1" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.UncheckedBackground>
                        <h:ToggleSwitch.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Offset="0" Color="#959595" />
                                <GradientStop Offset="0.5" Color="#A1A1A1" />
                                <GradientStop Offset="1" Color="#555555" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.BorderBrush>
                        <h:ToggleSwitch.CheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#1E41A5" />
                                <GradientStop Offset="0.5" Color="#2F6AEA" />
                                <GradientStop Offset="1" Color="#6298FE" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.CheckedBackground>
                        <h:ToggleSwitch.ThumbBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#C1C1C1" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#FCFCF6" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBackground>
                        <h:ToggleSwitch.ThumbBorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#F6F6F6" />
                                <GradientStop Offset="0.5" Color="#959595" />
                                <GradientStop Offset="1" Color="#565656" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBorderBrush>
                    </h:ToggleSwitch>
                    <h:ToggleSwitch x:Name="toggleSwitch4"
                                    Grid.RowSpan="2"
                                    Width="98"
                                    Height="37"
                                    Padding="0"
                                    Background="Black"
                                    BorderThickness="2"
                                    CheckedForeground="White"
                                    CheckedText="Ja"
                                    CornerRadius="10"
                                    FontFamily="Tahoma"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    ThumbBorderThickness="2"
                                    ThumbCornerRadius="7"
                                    ThumbGlowColor="Gray"
                                    ThumbShineCornerRadius="6,6,5,5"
                                    UncheckedForeground="Black"
                                    UncheckedText="Nein">
                        <h:ToggleSwitch.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Offset="0" Color="#959595" />
                                <GradientStop Offset="0.5" Color="#A1A1A1" />
                                <GradientStop Offset="1" Color="#555555" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.BorderBrush>
                        <h:ToggleSwitch.CheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#1E41A5" />
                                <GradientStop Offset="0.5" Color="#2F6AEA" />
                                <GradientStop Offset="1" Color="#6298FE" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.CheckedBackground>
                        <h:ToggleSwitch.ThumbBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#C1C1C1" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#FCFCF6" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBackground>
                        <h:ToggleSwitch.ThumbBorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#F6F6F6" />
                                <GradientStop Offset="0.5" Color="#959595" />
                                <GradientStop Offset="1" Color="#565656" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.ThumbBorderBrush>
                        <h:ToggleSwitch.UncheckedBackground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="#626262" />
                                <GradientStop Offset="0.5" Color="#A5A5A5" />
                                <GradientStop Offset="1" Color="#F1F1F1" />
                            </LinearGradientBrush>
                        </h:ToggleSwitch.UncheckedBackground>
                    </h:ToggleSwitch>
                    <h:ToggleSwitch x:Name="toggleSwitch5"
                                    Grid.Row="1"
                                    Width="98"
                                    Height="37"
                                    Padding="0"
                                    Background="Wheat"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    CheckedBackground="Wheat"
                                    CheckedForeground="Black"
                                    CheckedText="On"
                                    CornerRadius="0"
                                    FontFamily="Tahoma"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    ThumbBackground="Wheat"
                                    ThumbBorderBrush="#444444"
                                    ThumbBorderThickness="2"
                                    ThumbCornerRadius="0"
                                    ThumbGlowColor="Gray"
                                    UncheckedBackground="Wheat"
                                    UncheckedForeground="Black"
                                    UncheckedText="Off" />
                </UniformGrid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page>
