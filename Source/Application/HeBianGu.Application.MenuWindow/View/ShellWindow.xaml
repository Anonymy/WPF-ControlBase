<h:LinkActionsManagerWindowBase x:Class="HeBianGu.Application.MenuWindow.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.Application.MenuWindow"
        xmlns:h="QQ:908293466"
        NotifyIconSource="/HeBianGu.General.WpfControlLib;component/Resources/iBook.ico"
        mc:Ignorable="d" Title="ShellWindow"  Height="768" Width="1366">

    <h:ManagerWindowBase.Logo>
        <BitmapImage UriSource="/HeBianGu.General.WpfControlLib;component/Resources/logo.png"/>
    </h:ManagerWindowBase.Logo>

    <h:LinkActionsManagerWindowBase.LinkActions>
        <h:LinkAction  DisplayName="渐变动画" Logo="&#xe7e5;" Controller="Time" Action="Home"/>
        <h:LinkAction  DisplayName="随机动画" Logo="&#xe908;"  Controller="Random" Action="Home" />
        <h:LinkAction  DisplayName="闪动动画" Logo="&#xe656;" Controller="Flash" Action="Home"/>
        <h:LinkAction  DisplayName="流体动画" Logo="&#xe656;" Controller="Fluid" Action="Home"/>
    </h:LinkActionsManagerWindowBase.LinkActions>

    <h:ManagerWindowBase.CustomContent>
        <StackPanel>
            <MenuItem Header="注册产品">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe713;" FontSize="17"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="意见反馈">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe713;" FontSize="17"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="技术支持">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe713;" FontSize="17"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="检查更新">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe713;" FontSize="17"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="后台运行">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe754;" FontSize="15"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator Height="2" Background="{DynamicResource S.Brush.TextBorderBrush.Default}"/>

            <MenuItem Header="帮助">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe713;" FontSize="17"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="关于">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe754;" FontSize="15"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator Height="8" Background="{DynamicResource S.Brush.TextBorderBrush.Default}"/>

            <MenuItem Header="设置">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe88e;" FontSize="15"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="退出">
                <MenuItem.Icon>
                    <TextBlock Style="{DynamicResource S.TextBlock.FIcon}" Text="&#xe7dc;" FontSize="15"/>
                </MenuItem.Icon>
            </MenuItem>
        </StackPanel>
    </h:ManagerWindowBase.CustomContent>
</h:LinkActionsManagerWindowBase>
