<UserControl x:Class="HeBianGu.Application.ManagerWindow.View.Attach.VisibleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Attach"
             xmlns:h="QQ:908293466" 
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="None" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />
                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:NoneAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>
                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ScaleAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb1" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb1,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="OpacityAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton IsChecked="True" x:Name="cb2" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb2,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="TranslateAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb3" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb3,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:TranslateAction StartPoint="-100,-100" EndPoint="100,100"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="AngleAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb8" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb8,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:AngleAction VisibleDuration="500"/>
                            </h:ActionCollection> 
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="HorizontalAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton   IsChecked="True" x:Name="cb4" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb4,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:HorizontalAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="VerticalAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb5" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb5,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:VerticalAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="SkewAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb6" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb6,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:SkewAction StartAngleX="40" EndAngleX="0" StartAngleY="0" EndAngleY="0"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="LinearOpacityMaskAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb7" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb7,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:LinearOpacityMaskAction StartPoint="0,1" EndPoint="1,1"  Viewport="0.1 0.2 0.1 0.2"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ImageOpacityMaskAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb10" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb10,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ImageOpacityMaskAction Duration="1000" ImageSource="/HeBianGu.General.WpfControlLib;component/Resources/logo.png"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ScaleGeomotryAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb9" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb9,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleGeomotryAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ScaleGeomotryAction - RectangleGeometry" Height="300">
                <DockPanel>

                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb11" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb11,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleGeomotryAction PointOriginType="Center">
                                    <h:ScaleGeomotryAction.Geometry>
                                        <RectangleGeometry/>
                                    </h:ScaleGeomotryAction.Geometry>
                                </h:ScaleGeomotryAction>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ScaleGeomotryAction MousePosition" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb12" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb12,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleGeomotryAction PointOriginType="MousePosition"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="ScaleGeomotryAction RandomInner" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb13" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb13,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleGeomotryAction  PointOriginType="RandomInner"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>
            
            <GroupBox Header="AngleAction + ScaleAction" Height="300">
                <DockPanel>
                    <h:SwitchToggleButton  IsChecked="True" x:Name="cb15" DockPanel.Dock="Top" Content="显示/隐藏" HorizontalAlignment="Left" Margin="5" CornerRadius="2" BorderCornerRadius="3" />

                    <Grid Background="{DynamicResource S.Brush.Accent}" h:Cattach.IsVisible="{Binding ElementName=cb15,Path=IsChecked}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:AngleAction RenderTransformOrigin="0.5,0.5" StartAngle="0" EndAngle="720" VisibleDuration="500"/>
                                <h:ScaleAction StartX="0" EndX="0" StartY="0"  EndY="0"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <TextBlock Text="Grid" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DockPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
