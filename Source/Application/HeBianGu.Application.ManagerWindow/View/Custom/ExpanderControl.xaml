<UserControl x:Class="HeBianGu.Application.ManagerWindow.View.Custom.ExpanderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Custom"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="C.FButton.Default" BasedOn="{StaticResource S.FButton.Style.Transparent}" TargetType="h:FButton">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Icon" Value="&#xe67f;" />
            <Setter Property="FIconSize" Value="40" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <!--<Setter Property="RenderTransform" Value="{StaticResource {x:Static h:SystemKeys.TransformGroup}}"/>-->
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <ItemsControl>
            <GroupBox Header="StackPanel">
                <h:ToggleExpander>
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="Horizontal">
                <h:ToggleExpander>
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />

                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="UniformGrid">
                <h:ToggleExpander>
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>
            <GroupBox Header="S.Brush.TextBackground.Default">
                <h:ToggleExpander Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}" BorderBrush="{DynamicResource {x:Static h:BrushKeys.Accent}}">
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Height="300" Header="S.ToggleExpander.Single">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Single}">
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" Visibility="Collapsed" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" Visibility="Collapsed" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" Visibility="Collapsed" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander DockPanel.Dock="Left" Style="{StaticResource S.ToggleExpander.Single}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  DockPanel.Dock="Right"
                                  Style="{StaticResource S.ToggleExpander.Single}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>


            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  DockPanel.Dock="Right"
                                  Style="{StaticResource S.ToggleExpander.Single}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Single">
                <h:ToggleExpander HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  DockPanel.Dock="Right"
                                  Style="{StaticResource S.ToggleExpander.Single}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Style="{StaticResource S.ToggleExpander.Center}">
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Margin="0,0,0,-200" Style="{StaticResource S.ToggleExpander.Center}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <h:ArcPanel Margin="30"
                                        EndAngle="180"
                                        IsAnimation="False"
                                        Len="60"
                                        StartAngle="0" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ToggleExpander Margin="0,0,-700,-180" Style="{StaticResource S.ToggleExpander.Center}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <h:ArcPanel Margin="20"
                                        EndAngle="180"
                                        IsAnimation="False"
                                        Len="70"
                                        StartAngle="90" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ToggleExpander>
            </GroupBox>


            <GroupBox Header="S.ToggleExpander.Center">
                <h:ElementExpander Style="{StaticResource S.ElementExpander.MouseEnter}">
                    <h:ElementExpander.Content>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Red"
                                   Text="鼠标放进来" />
                    </h:ElementExpander.Content>

                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ElementExpander>
            </GroupBox>

            <GroupBox Header="S.ToggleExpander.Center">
                <h:ElementExpander HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource S.ElementExpander.MouseEnter}">
                    <h:ToggleExpander.ItemsPanel>
                        <ItemsPanelTemplate>
                            <h:ArcPanel Margin="0,0,-50,-50"
                                        EndAngle="180"
                                        IsAnimation="False"
                                        Len="70"
                                        StartAngle="90" />
                        </ItemsPanelTemplate>
                    </h:ToggleExpander.ItemsPanel>

                    <h:ElementExpander.Content>
                        <TextBlock HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Foreground="Red"
                                   Text="鼠标放进来" />
                    </h:ElementExpander.Content>

                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                    <h:FButton Style="{StaticResource C.FButton.Default}" />
                </h:ElementExpander>
            </GroupBox>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
