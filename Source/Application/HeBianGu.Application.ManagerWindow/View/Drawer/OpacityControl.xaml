<UserControl x:Class="HeBianGu.Application.ManagerWindow.View.Drawer.OpacityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Drawer"
             xmlns:h="QQ:908293466" 
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="上下左右" Height="900">
                <Grid>
                    <!--右侧-->
                    <h:FDrawer Header="右侧" Style="{StaticResource S.FDrawer.Right.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="40" Width="200">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>

                    </h:FDrawer>

                    <!--左侧-->
                    <h:FDrawer Header="左侧" Style="{StaticResource S.FDrawer.Left.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>


                        <ListBox HorizontalAlignment="Stretch" Grid.Row="1" Width="200"  Margin="40">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <!--下侧-->
                    <h:FDrawer Header="下侧" Style="{StaticResource S.FDrawer.Bottom.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" Grid.Row="1" Height="200">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <!--上侧-->
                    <h:FDrawer Header="上侧" Style="{StaticResource S.FDrawer.Top.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" Grid.Row="1" Height="200">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>
                </Grid>
            </GroupBox>

            <GroupBox Header="角落" Height="900">
                <Grid>
                    <h:FDrawer Header="右下" Padding="0">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                 Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="左下" HorizontalContentAlignment="Left">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="左上" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" ClipToBounds="True">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>


                    <h:FDrawer Header="右上" VerticalContentAlignment="Top" ClipToBounds="True">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>
                </Grid>
            </GroupBox>

            <GroupBox Header="UniformGrid" Height="900">
                <UniformGrid>
                    <h:FDrawer Header="位置一" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                 Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>

                    </h:FDrawer>

                    <h:FDrawer Header="位置二" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="位置三" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="位置四" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                </UniformGrid>
            </GroupBox>

            <GroupBox Header="StackPanel" Height="Auto">
                <StackPanel>
                    <h:FDrawer Header="位置一" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                 Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>

                    </h:FDrawer>

                    <h:FDrawer Header="位置二" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="位置三" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                    <h:FDrawer Header="位置四" Style="{StaticResource S.FDrawer.Center.Default}">
                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:OpacityAction/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Height="300" Width="500">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>

                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
