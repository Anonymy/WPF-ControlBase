                        <h:Cattach.VisibleActions>
                            <h:ActionCollection>
                                <h:ScaleAction RenderTransformOrigin="0.5,0"/>
                            </h:ActionCollection>
                        </h:Cattach.VisibleActions>

                        <ListBox HorizontalAlignment="Stretch" Grid.Row="1" Height="200">
                            <h:FTextBox UseHistory="False"/>
                            <h:FTextBox/>
                        </ListBox>
                    </h:FDrawer>
                </Grid>
            </GroupBox>

