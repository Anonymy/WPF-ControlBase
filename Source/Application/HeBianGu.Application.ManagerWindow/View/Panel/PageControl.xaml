<UserControl x:Class="HeBianGu.Application.ManagerWindow.View.Panel.PageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Panel" 
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="h:FButton" BasedOn="{StaticResource S.FButton.Style.Default}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="FontSize" Value="85"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style> 
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="None" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp" Duration="1000">
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp}"/>

                </Grid>
            </GroupBox>

            <GroupBox Header="AngleAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp1" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:AngleTransition Duration="1000"/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp1}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp1}"/>

                </Grid>
            </GroupBox>

            <GroupBox Header="OpacityAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp5" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:OpacityTransition/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp5}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp5}"/>

                </Grid>
            </GroupBox>

            <GroupBox Header="ScaleAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp2" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:ScaleTransition/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp2}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp2}"/>

                </Grid>
            </GroupBox>

            <GroupBox Header="HorizontalAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp3" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:HorizontalTransition Duration="1000"/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp3}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp3}"/>

                </Grid>
            </GroupBox>
            <GroupBox Header="VerticalAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp4" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:VerticalTransition Duration="1000"/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp4}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp4}"/>

                </Grid>
            </GroupBox>
            <GroupBox Header="SKewAction" Height="800">
                <Grid>
                    <h:PagePanel x:Name="pp6" Duration="1000">
                        <h:PagePanel.AnimationAction>
                            <h:SkewTransition Duration="1000" StartAngleX="90" EndAngleX="0"  StartAngleY="90" EndAngleY="0"/>
                        </h:PagePanel.AnimationAction>
                        <h:FButton Background="Purple" Content="1"/>
                        <h:FButton Background="Red" Content="2"/>
                        <h:FButton Background="Green" Content="3"/>
                        <h:FButton Background="Blue" Content="4"/>
                        <h:FButton Background="Yellow" Content="5"/>
                        <h:FButton Background="Orange" Content="6"/>
                    </h:PagePanel>

                    <h:FButton FIcon="&#xe9be;" Style="{StaticResource S.FButton.Left}" CommandTarget="{Binding ElementName=pp6}"/>
                    <h:FButton FIcon="&#xe9bf;"  Style="{StaticResource S.FButton.Right}" CommandTarget="{Binding ElementName=pp6}"/>
                </Grid>
            </GroupBox> 
        </StackPanel>
    </ScrollViewer>
</UserControl>
