<UserControl x:Class="HeBianGu.App.Touch.View.Setting.BasicControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Touch.View.Setting"
             xmlns:h="QQ:908293466"
             xmlns:main="clr-namespace:HeBianGu.App.Touch"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <h:FCheckBox Content="启用设置"  Margin="40,20,0,0" IsChecked="True"/>

        <UniformGrid Grid.Row="1" Columns="1" Margin="40,0" Height="400" VerticalAlignment="Top">

            <h:FTextBox  h:Cattach.Label="机构名称   " Text="四川省成都市" h:Cattach.Watermark="请输入机构名称">
                <h:Interaction.Behaviors>
                    <main:TextBoxGotFocusShowKeyBoardBehavior/>
                </h:Interaction.Behaviors>
            </h:FTextBox>
            <h:FTextBox  h:Cattach.Label="终端名称   " Text="河边骨体检测量终端" h:Cattach.Watermark="请输入终端名称">
                <h:Interaction.Behaviors>
                    <main:TextBoxGotFocusShowKeyBoardBehavior/>
                </h:Interaction.Behaviors>
            </h:FTextBox>
            <h:FTextBox  h:Cattach.Label="联系电话   " Text="908293466" h:Cattach.Watermark="请输入联系电话">
                <h:Interaction.Behaviors>
                    <main:TextBoxGotFocusShowKeyBoardBehavior/>
                </h:Interaction.Behaviors>
            </h:FTextBox>
            <h:FTextBox  h:Cattach.Label="机构地址   " Text="四川省成都市高新区" h:Cattach.Watermark="请输入机构地址">
                <h:Interaction.Behaviors>
                    <main:TextBoxGotFocusShowKeyBoardBehavior/>
                </h:Interaction.Behaviors>
            </h:FTextBox>
            <h:FTextBox  h:Cattach.Label="责任医生   "  Text="河边骨" h:Cattach.Watermark="请输入责任医生">
                <h:Interaction.Behaviors>
                    <main:TextBoxGotFocusShowKeyBoardBehavior/>
                </h:Interaction.Behaviors>
            </h:FTextBox>
        </UniformGrid>
    </Grid>
</UserControl>
