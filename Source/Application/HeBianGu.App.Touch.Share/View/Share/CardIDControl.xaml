<UserControl x:Class="HeBianGu.App.Touch.View.Share.CardIDControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Touch.View.Share"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             Height="580"
             d:DesignHeight="650"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="4*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="{StaticResource C.FontSize.Title}"
                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"
                   Text="请刷身份证或输入身份证号打印报告"
                   TextWrapping="Wrap" />

        <h:FTextBox x:Name="txt_value"
                    Grid.Row="1"
                    Width="400"
                    Height="{StaticResource C.WindowItemHeight.Default}"
                    Margin="10,0"
                    HorizontalContentAlignment="Center"
                    h:Cattach.Icon=""
                    h:Cattach.Watermark="请输入身份证号"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="{StaticResource C.FontSize.Default}"
                    Foreground="White"
                    Style="{StaticResource S.FTextBox.Single}" />


        <local:KeyBoardControl Grid.Row="2" />

        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Orientation="Horizontal">
            <h:FButton Margin="0,0,170,0"
                       Command="{x:Static h:DialogHost.CloseDialogCommand}"
                       Content="取消"
                       Style="{StaticResource C.FButton.Cancel}">
                <h:FButton.CommandParameter>
                    <system:Boolean>false</system:Boolean>
                </h:FButton.CommandParameter>
            </h:FButton>

            <h:FButton Click="FButton_Click" Content="确定" Style="{StaticResource C.FButton.Default}" />
        </StackPanel>
    </Grid>
</UserControl>
