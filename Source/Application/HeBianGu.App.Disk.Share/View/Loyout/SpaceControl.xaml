<UserControl x:Class="HeBianGu.App.Disk.SpaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Disk" xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock  Text="&#xe674;" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" FontSize="88" Foreground="{DynamicResource {x:Static h:BrushKeys.Accent}}" 
                        RenderTransform="{StaticResource {x:Static h:SystemKeys.TransformGroup}}" RenderTransformOrigin="0.5,0.5">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Button.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation From="-10" To="0"  Duration="0:0:0.2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" RepeatBehavior="Forever">
                                    <DoubleAnimation.EasingFunction>
                                        <ElasticEase/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>

            <TextBlock Text="私密文件存在这里更安全" Margin="0,20" Style="{DynamicResource {x:Static h:TextBlockKeys.Default}}" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}"/>

            <h:PasswordBox HorizontalAlignment="Stretch" Margin="0,15,0,20" BorderBrush="{DynamicResource {x:Static h:BrushKeys.Dark3}}"/>

            <h:FButton Content="进入隐藏空间" Style="{DynamicResource S.FButton.Style.Default}" Width="Auto"/>
        </StackPanel>
    </Grid>
</UserControl>
