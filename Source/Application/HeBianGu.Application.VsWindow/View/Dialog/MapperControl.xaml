                            <h:TestViewModel Value="主机三" Value1="192.168.0.3" Value2="(234,35)"/>
                            <h:TestViewModel Value="主机四" Value1="192.168.0.4" Value2="(11,435)"/>

                        </ComboBox>
                    </UniformGrid>
                    <UniformGrid Columns="3" HorizontalAlignment="Center" Height="{DynamicResource S.Window.Row.Height}">
                        <TextBlock Text="信号生成分系统四"  Margin="-40,0"/>
                        <TextBlock Text="----"/>
                        <!--<ComboBox SelectedIndex="0">
                            <system:String>主机一</system:String>
                            <system:String>主机二</system:String>
                            <system:String>主机三</system:String>
                            <system:String>主机四</system:String>
                        </ComboBox>-->

                        <ComboBox SelectedIndex="3" h:Cattach.Watermark="请选择映射实际主机" Margin="-40,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Value}"/>
                                        <TextBlock Margin="10,0" Text="{Binding Value2}"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>

                            <h:TestViewModel Value="主机一" Value1="192.168.0.1" Value2="(34,145)"/>
                            <h:TestViewModel Value="主机二" Value1="192.168.0.2" Value2="(334,45)"/>
                            <h:TestViewModel Value="主机三" Value1="192.168.0.3" Value2="(234,35)"/>
                            <h:TestViewModel Value="主机四" Value1="192.168.0.4" Value2="(11,435)"/>

                        </ComboBox>
                    </UniformGrid>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!--<h:FButton Grid.Row="2" Content="上一步" Style="{StaticResource S.FButton.Style.Default}" Grid.ColumnSpan="2"
                IsDefault="True" Command="{x:Static h:DialogHost.CloseDialogCommand}" 
                HorizontalAlignment="Right" Margin="0,0,150,0" CommandParameter="{x:Null}">
        </h:FButton>-->

        <CheckBox Content="不再提示" VerticalAlignment="Bottom" Grid.Row="3"/>

        <h:FButton Grid.Row="2" Content="开始" Style="{StaticResource S.FButton.Style.Default}" Grid.ColumnSpan="2"
                IsDefault="True" Command="{x:Static h:DialogHost.CloseDialogCommand}" 
                HorizontalAlignment="Right" Margin="0,0,0,0">
            <h:FButton.CommandParameter>
                <system:Boolean>True</system:Boolean>
            </h:FButton.CommandParameter>
        </h:FButton>

        <h:FButton Grid.Row="0" Style="{DynamicResource S.FButton.Close}" Grid.ColumnSpan="2"
                IsCancel="True" Command="{x:Static h:DialogHost.CloseDialogCommand}" Margin="-40,-20"
                HorizontalAlignment="Right">
            <h:FButton.CommandParameter>
                <system:Boolean>False</system:Boolean>
            </h:FButton.CommandParameter>
        </h:FButton>
    </Grid>
</UserControl>
