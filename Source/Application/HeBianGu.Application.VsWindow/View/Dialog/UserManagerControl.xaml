    </UserControl.Resources>
    <Grid Margin="50,50,50,10">
        <Grid>
            <h:PagedDataGrid PageCountVisible="Collapsed" PageCount="17" BorderThickness="0" Style="{StaticResource S.PagedDataGrid.Default}" DataSource="{StaticResource S.Array.Users}">
                <h:PagedDataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.Header>
                            <CheckBox Content="全选"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Foreground="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},Path=Foreground}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="账号" Binding="{Binding Value}" Width="*"/>
                    <DataGridTextColumn Header="密码" Binding="{Binding Value1}" Width="*"/>
                    <DataGridTextColumn Header="用户名" Binding="{Binding Value2}" Width="*"/>
                    <DataGridTextColumn Header="角色" Binding="{Binding Value3}" Width="*"/>
                    <DataGridTemplateColumn  Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="是否启用"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Selected}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},Path=Foreground}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="创建时间" Binding="{Binding DateTime1}" Width="1.5*"/>

                    <DataGridTemplateColumn  Width="*">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="操作"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="删除" Width="Auto" Margin="0,2" Background="{DynamicResource S.Brush.Red.Notice}"/>
                                    <Button Content="编辑" Width="Auto" Margin="2,2" Background="{DynamicResource S.Brush.Green.Notice}"/>
                                </DockPanel>                            
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </h:PagedDataGrid.Columns>

                <h:PagedDataGrid.HeaderContent>
                    <DockPanel VerticalAlignment="Top" LastChildFill="False" Margin="0,5">
                        <Button Content="创建"/>

                        <Button Content="删除" Margin="10,0"/>
                    </DockPanel>
                </h:PagedDataGrid.HeaderContent>
            </h:PagedDataGrid> 
        </Grid>

        <h:FButton Grid.Row="0" Style="{DynamicResource S.FButton.Close}" Grid.ColumnSpan="2"
                IsCancel="True" Command="{x:Static h:CommandService.MessageLayerCloseCommand}" Margin="-40,-20"
                HorizontalAlignment="Right">
            <h:FButton.CommandParameter>
                <system:Boolean>False</system:Boolean>
            </h:FButton.CommandParameter>
        </h:FButton>

        <TextBlock Text="用户管理" VerticalAlignment="Top" Style="{DynamicResource S.TextBlock.Default}" HorizontalAlignment="Left" FontSize="25" Margin="0,-40,0,0" Foreground="{DynamicResource S.Brush.TextForeground.Title}"/>
    </Grid>
</UserControl>
