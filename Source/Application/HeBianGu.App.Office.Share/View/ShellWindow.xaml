<h:OfficeWindowBase x:Class="HeBianGu.App.Office.ShellWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:h="QQ:908293466"
                    xmlns:local="clr-namespace:HeBianGu.App.Office"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    Title="需求文档.xlsx - Excel"
                    Width="1100"
                    Height="700"
                    DataContext="{Binding Source={StaticResource S.DataSource.Locator}, Path=ShellViewModel}"
                    NotifyIconSource="/HeBianGu.General.WpfControlLib;component/Resources/iBook.ico"
                    mc:Ignorable="d">

    <h:OfficeWindowBase.TitleContent>
        <DockPanel LastChildFill="False">

            <Button Width="25"
                    Height="25"
                    h:Cattach.Icon="&#xe8cb;"
                    Style="{DynamicResource {x:Static h:ButtonKeys.AccentBackTransparent}}" />

            <!--<Button Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" h:Cattach.Icon="&#xe8a6;"
                    Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Height="25"
                    h:Cattach.MouseOverBackground="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy2}}"/>-->


            <Button Width="25"
                    Height="25"
                    h:Cattach.Icon="&#xe8a5;"
                    Style="{DynamicResource {x:Static h:ButtonKeys.AccentBackTransparent}}" />

            <Button Width="25"
                    Height="25"
                    h:Cattach.Icon="&#xe8a7;"
                    Style="{DynamicResource {x:Static h:ButtonKeys.AccentBackTransparent}}" />


            <!--<Button Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" h:Cattach.Icon="&#xe77e;"
                    Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Height="25"
                    h:Cattach.MouseOverBackground="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy2}}"/>

            <Button Style="{DynamicResource {x:Static h:ButtonKeys.Transparent}}" h:Cattach.Icon="&#xe710;"
                    Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" Height="25"
                    h:Cattach.MouseOverBackground="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy2}}"/>-->

        </DockPanel>
    </h:OfficeWindowBase.TitleContent>

    <h:OfficeWindowBase.ToolContent>
        <Grid>
            <TabControl Style="{DynamicResource {x:Static h:TabControlKeys.Office}}">
                <TabItem Padding="60,0,0,0" Header="开始">
                    <DockPanel Margin="0,2" LastChildFill="False">
                        <GroupBox Header="运行" Style="{DynamicResource {x:Static h:GroupBoxKeys.ToolBar}}">
                            <DockPanel>
                                <Button h:Cattach.Icon="&#xe6e1;" Content="开始" Style="{DynamicResource {x:Static h:ButtonKeys.VerticalToolBar}}" />
                                <Button h:Cattach.Icon="&#xe6e1;" Content="停止" Style="{DynamicResource {x:Static h:ButtonKeys.VerticalToolBar}}" />
                            </DockPanel>
                        </GroupBox>

                        <Separator Background="{DynamicResource {x:Static h:BrushKeys.Dark2}}" Style="{DynamicResource {x:Static h:SeparatorKeys.Vertical}}" />

                        <GroupBox Header="文件" Style="{DynamicResource {x:Static h:GroupBoxKeys.ToolBar}}">
                            <DockPanel>
                                <Button h:Cattach.Icon="&#xe6e1;" Content="打印" Style="{DynamicResource {x:Static h:ButtonKeys.VerticalToolBar}}" />
                                <Button h:Cattach.Icon="&#xe6e1;" Content="保存" Style="{DynamicResource {x:Static h:ButtonKeys.VerticalToolBar}}" />
                                <Button h:Cattach.Icon="&#xe701;"
                                        Content="删除"
                                        Foreground="{DynamicResource {x:Static h:BrushKeys.Red}}"
                                        Style="{DynamicResource {x:Static h:ButtonKeys.VerticalToolBar}}" />
                            </DockPanel>
                        </GroupBox>

                        <Separator Background="{DynamicResource {x:Static h:BrushKeys.Dark2}}" Style="{DynamicResource {x:Static h:SeparatorKeys.Vertical}}" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="插入">
                    <Grid />
                </TabItem>

                <TabItem Header="布局">
                    <Grid />
                </TabItem>
            </TabControl>
        </Grid>
    </h:OfficeWindowBase.ToolContent>

    <h:OfficeWindowBase.LinkActions>
        <h:LinkAction Action="Info"
                      Controller="Loyout"
                      DisplayName="信息"
                      Logo="&#xe7e5;" />
        <h:LinkAction Action="New"
                      Controller="Loyout"
                      DisplayName="新建"
                      Logo="&#xe908;" />
        <h:LinkAction Action="Open"
                      Controller="Loyout"
                      DisplayName="打开"
                      Logo="&#xe656;" />

        <h:LinkAction Action="Account"
                      Controller="Loyout"
                      DisplayName="许可"
                      Logo="&#xe656;" />
        <h:LinkAction Action="Connect"
                      Controller="Loyout"
                      DisplayName="服务器"
                      Logo="&#xe656;" />
        <!--<h:LinkAction  DisplayName="共享" Logo="&#xe656;" Controller="Loyout" Action="Home"/>-->

        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="保存"
                      Logo="&#xe656;" />
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="另存为"
                      Logo="&#xe656;" />
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="导出"
                      Logo="&#xe656;" />

        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="反馈"
                      Logo="&#xe656;" />
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="选项"
                      Logo="&#xe656;" />
        <h:LinkAction Action="Home"
                      Controller="Loyout"
                      DisplayName="关闭"
                      Logo="&#xe656;" />

    </h:OfficeWindowBase.LinkActions>
    <Grid Background="Blue">
        <TextBlock HorizontalAlignment="Center" FontSize="100" Text="Back" />
    </Grid>
</h:OfficeWindowBase>
