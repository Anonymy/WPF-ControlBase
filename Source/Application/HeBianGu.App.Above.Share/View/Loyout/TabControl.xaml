                    </TabItem>
                </TabControl>

                <h:Cattach.Text>
                    <![CDATA[ 
                <TabControl ItemContainerStyle="{StaticResource {x:Static h:TabItemKeys.Default}}" h:Cattach.IsUseClose="True"/>
                    ]]>
                </h:Cattach.Text>
            </GroupBox>

            <GroupBox Height="300" Header="S.TabItem.Default">
