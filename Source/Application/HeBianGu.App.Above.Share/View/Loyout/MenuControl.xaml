                    <MenuItem Header="帮助(H)">
                        <MenuItem Header="软件升级"/>
                        <MenuItem Header="关于"/>
                    </MenuItem>
                </Menu>

                <h:Cattach.Text>
                    <![CDATA[ 
                    <Menu/>
                    ]]>
                </h:Cattach.Text>
            </GroupBox>

            <GroupBox Header="S.Menu.Single">
                <GroupBox.Resources>
                    <Style TargetType="MenuItem" BasedOn="{StaticResource S.MenuItem.Single}"/>
