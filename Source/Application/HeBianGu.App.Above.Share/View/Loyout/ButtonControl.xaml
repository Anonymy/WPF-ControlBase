<UserControl x:Class="HeBianGu.App.Above.View.Loyout.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Above.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <TabControl>
        <TabItem Header="Default">
            <ScrollViewer>
                <UniformGrid Columns="3">
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction SplitMilliSecond="-800">
                                <h:InvokeTimeSplitAnimationAction.Timelines>
                                    <cl:ArrayList>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="00:00:01" />
                                    </cl:ArrayList>
                                </h:InvokeTimeSplitAnimationAction.Timelines>
                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>

                    <GroupBox Header="S.Button.Default">
                        <Button Content="按钮" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Content="按钮"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="h:Cattach.Icon">
                        <Button h:Cattach.Icon="&#xe69e;" Content="默认按钮" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Content="默认按钮" h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="h:Cattach.IsBuzy">
                        <StackPanel>
                            <CheckBox x:Name="cb" Content="是否运行" />
                            <Button h:Cattach.BuzyText="正在运行" h:Cattach.IsBuzy="{Binding ElementName=cb, Path=IsChecked}" Content="默认按钮" />
                        </StackPanel>

                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Content="默认按钮" h:Cattach.IsBuzy="{Binding ElementName=cb,Path=IsChecked}" h:Cattach.BuzyText="正在运行"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="h:Cattach.Value">
                        <StackPanel>
                            <CheckBox x:Name="cbb" Content="是否运行" />
                            <Slider x:Name="sl"
                                    Margin="0,10"
                                    DockPanel.Dock="Top"
                                    IsEnabled="{Binding ElementName=cbb, Path=IsChecked}" />
                            <Button h:Cattach.BuzyText="正在运行"
                                    h:Cattach.IsBuzy="{Binding ElementName=cbb, Path=IsChecked}"
                                    h:Cattach.IsIndeterminate="False"
                                    h:Cattach.Value="{Binding ElementName=sl, Path=Value}"
                                    Content="默认按钮" />
                        </StackPanel>

                        <h:Cattach.Text>
                            <![CDATA[ 
               <Button Content="默认按钮" 
                                    h:Cattach.IsIndeterminate="False"
                                    h:Cattach.IsBuzy="{Binding ElementName=cbb,Path=IsChecked}" 
                                    h:Cattach.Value="{Binding ElementName=sl,Path=Value}" h:Cattach.BuzyText="正在运行"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="ClickSelectedStateBehavior">
                        <Button h:Cattach.SelectBackground="Green" Content="默认按钮">
                            <h:Interaction.Behaviors>
                                <h:ClickSelectedStateBehavior />
                            </h:Interaction.Behaviors>
                        </Button>

                        <h:Cattach.Text>
                            <![CDATA[ 
                  <Button Content="默认按钮" h:Cattach.SelectBackground="Green">
                    <h:Interaction.Behaviors>
                        <h:ClickSelectedStateBehavior/>
                    </h:Interaction.Behaviors>
                  </Button>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Transparent">
                        <Button Content="透明按钮" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" Content="透明按钮"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="h:Cattach.Transparent">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Link">
                        <Button h:Cattach.Text="跳转到指定页面" Style="{StaticResource {x:Static h:ButtonKeys.Link}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.Link}}" h:Cattach.Text="跳转到指定页面"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Circle">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.Circle}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.Circle}}"  h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Circle.Transparent">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.CircleTransparent}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.CircleTransparent}}"  h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Circle.Transparent">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.CircleTransparent}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.CircleTransparent}}"  h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Transparent.BorderBrush">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.BorderBrushTransparent}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Style="{StaticResource {x:Static h:ButtonKeys.BorderBrushTransparent}}"  h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.MouseOver">
                        <Button h:Cattach.Icon="&#xe69e;" Style="{StaticResource {x:Static h:ButtonKeys.MouseOver}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                    Button Style="{StaticResource {x:Static h:ButtonKeys.MouseOver}}"  h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Close">
                        <Button Style="{StaticResource {x:Static h:ButtonKeys.Close}}" />


                        <h:Cattach.Text>

                            <![CDATA[ 
                    Button Style="{StaticResource {x:Static h:ButtonKeys.Close}}"/>
                            
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Close.MouseOver">
                        <Button Style="{StaticResource {x:Static h:ButtonKeys.CloseMouseOver}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                   Button Style="{StaticResource {x:Static h:ButtonKeys.CloseMouseOver}}"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Close.Transparent">
                        <Button Style="{StaticResource {x:Static h:ButtonKeys.CloseTransparent}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                    Button Style="{StaticResource {x:Static h:ButtonKeys.CloseTransparent}}"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Left">
                        <Button Style="{StaticResource {x:Static h:ButtonKeys.Left}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Style="{StaticResource {x:Static h:ButtonKeys.Left}}"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="S.Button.Right">
                        <Button Style="{StaticResource {x:Static h:ButtonKeys.Right}}" />
                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Style="{StaticResource {x:Static h:ButtonKeys.Right}}"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                </UniformGrid>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Single">
            <ScrollViewer>
                <UniformGrid Columns="3">
                    <h:Interaction.Triggers>
                        <h:EventTrigger EventName="Loaded">
                            <h:InvokeTimeSplitAnimationAction SplitMilliSecond="-800">
                                <h:InvokeTimeSplitAnimationAction.Timelines>
                                    <cl:ArrayList>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="00:00:01" />
                                    </cl:ArrayList>
                                </h:InvokeTimeSplitAnimationAction.Timelines>
                            </h:InvokeTimeSplitAnimationAction>
                        </h:EventTrigger>
                    </h:Interaction.Triggers>

                    <GroupBox Header="S.Button.Default">
                        <Button Content="按钮" Style="{DynamicResource {x:Static h:ButtonKeys.Single}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Content="按钮"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="h:Cattach.Icon">
                        <Button h:Cattach.Icon="&#xe69e;" Content="默认按钮" Style="{DynamicResource {x:Static h:ButtonKeys.Single}}" />

                        <h:Cattach.Text>
                            <![CDATA[ 
                <Button Content="默认按钮" h:Cattach.Icon="&#xe69e;"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="h:Cattach.IsBuzy">
                        <StackPanel>
                            <CheckBox x:Name="cbbbb" Content="是否运行" />
                            <Button h:Cattach.BuzyText="正在运行"
                                    h:Cattach.IsBuzy="{Binding ElementName=cbbbb, Path=IsChecked}"
                                    Content="默认按钮"
                                    Style="{DynamicResource {x:Static h:ButtonKeys.Single}}" />
                        </StackPanel>

                        <h:Cattach.Text>
                            <![CDATA[ 
                    <Button Content="默认按钮" h:Cattach.IsBuzy="{Binding ElementName=cb,Path=IsChecked}" h:Cattach.BuzyText="正在运行"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                    <GroupBox Header="h:Cattach.Value">
                        <StackPanel>
                            <CheckBox x:Name="cbbb" Content="是否运行" />
                            <Slider x:Name="sl1"
                                    Margin="0,10"
                                    DockPanel.Dock="Top"
                                    IsEnabled="{Binding ElementName=cbbb, Path=IsChecked}" />
                            <Button h:Cattach.BuzyText="正在运行"
                                    h:Cattach.IsBuzy="{Binding ElementName=cbbb, Path=IsChecked}"
                                    h:Cattach.IsIndeterminate="False"
                                    h:Cattach.Value="{Binding ElementName=sl1, Path=Value}"
                                    Content="默认按钮"
                                    Style="{DynamicResource {x:Static h:ButtonKeys.Single}}" />
                        </StackPanel>

                        <h:Cattach.Text>
                            <![CDATA[ 
               <Button Content="默认按钮" 
                                    h:Cattach.IsIndeterminate="False"
                                    h:Cattach.IsBuzy="{Binding ElementName=cbb,Path=IsChecked}" 
                                    h:Cattach.Value="{Binding ElementName=sl,Path=Value}" h:Cattach.BuzyText="正在运行"/>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>

                    <GroupBox Header="ClickSelectedStateBehavior">
                        <Button h:Cattach.SelectBackground="Green" Content="默认按钮" Style="{DynamicResource {x:Static h:ButtonKeys.Single}}">
                            <h:Interaction.Behaviors>
                                <h:ClickSelectedStateBehavior />
                            </h:Interaction.Behaviors>
                        </Button>

                        <h:Cattach.Text>
                            <![CDATA[ 
                  <Button Content="默认按钮" h:Cattach.SelectBackground="Green">
                    <h:Interaction.Behaviors>
                        <h:ClickSelectedStateBehavior/>
                    </h:Interaction.Behaviors>
                  </Button>
                    ]]>
                        </h:Cattach.Text>
                    </GroupBox>
                </UniformGrid>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</UserControl>
