<UserControl x:Class="HeBianGu.App.Above.View.Loyout.ScrollViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cl="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Above.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <TabControl>
        <TabItem Header="S.ScrollViewer.Default">
            <UniformGrid VerticalAlignment="Stretch" Columns="2">
                <h:Interaction.Triggers>
                    <h:EventTrigger EventName="Loaded">
                        <h:InvokeRandomSplitAnimationAction IsUseAll="True" SplitMilliSecond="-900">
                            <h:InvokeRandomSplitAnimationAction.Timelines>
                                <cl:ArrayList>
                                    <h:RandomDoubleAnimation Max="1000"
                                                             Min="-1000"
                                                             UseFrom="True"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                                             To="0"
                                                             Duration="00:00:01" />
                                    <h:RandomDoubleAnimation Max="1000"
                                                             Min="-1000"
                                                             UseFrom="True"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                                             To="0"
                                                             Duration="00:00:01" />

                                    <h:RandomDoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                             From="5" To="1"
                                                             Duration="00:00:01" />
                                    <h:RandomDoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                             From="5" To="1"
                                                             Duration="00:00:01" />

                                    <h:RandomDoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1"
                                                             Duration="00:00:01" />
                                </cl:ArrayList>
                            </h:InvokeRandomSplitAnimationAction.Timelines>
                        </h:InvokeRandomSplitAnimationAction>
                    </h:EventTrigger>
                </h:Interaction.Triggers>

                <GroupBox h:InvokeTimeSplitAnimationAction.IsExcept="True" Header="S.ScrollView.Default">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid Width="1500" Height="1500">
                            <Grid.Background>
                                <LinearGradientBrush>
                                    <GradientStop Offset="0" Color="Red" />
                                    <GradientStop Offset="0.3" Color="Green" />
                                    <GradientStop Offset="0.7" Color="Orange" />
                                    <GradientStop Offset="1" Color="Purple" />
                                </LinearGradientBrush>
                            </Grid.Background>
                        </Grid>
                    </ScrollViewer>
                    <h:Cattach.Text>
                        <![CDATA[ 
                <RadioButton>星期一</RadioButton>
                    ]]>
                    </h:Cattach.Text>
                </GroupBox>

                <GroupBox h:InvokeTimeSplitAnimationAction.IsExcept="True" Header="S.ScrollView.Tool">
                    <ScrollViewer Style="{StaticResource {x:Static h:ScrollViewerKeys.Tool}}">
                        <Grid Width="5000" Height="5000">
                            <Grid.Background>
                                <LinearGradientBrush>
                                    <GradientStop Offset="0" Color="Red" />
                                    <GradientStop Offset="0.3" Color="Green" />
                                    <GradientStop Offset="0.7" Color="Orange" />
                                    <GradientStop Offset="1" Color="Purple" />
                                </LinearGradientBrush>
                            </Grid.Background>
                        </Grid>
                    </ScrollViewer>


                    <h:Cattach.Text>
                        <![CDATA[ 
                <RadioButton>星期一</RadioButton>
                    ]]>
                    </h:Cattach.Text>
                </GroupBox>


            </UniformGrid>
        </TabItem>

