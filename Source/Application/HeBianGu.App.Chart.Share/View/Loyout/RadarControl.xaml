<UserControl x:Class="HeBianGu.App.Chart.View.Loyout.RadarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Chart.View.Loyout"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <UniformGrid Columns="2">
                <GroupBox Header="设置标记线">
                    <h:PolarChart  yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar yAxis="0,45,90,135,180,225,270,315"/>
                            <h:RadiusAxis/>
                            <h:RadarAxis yAxis="0,45,90,135,180,225,270,315" yDisplay="北京,上海,成都,哈尔滨,牡丹江,包头,青岛,宁夏"/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>

                <GroupBox Header="设置标记线" Height="500">
                    <h:PolarChart yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>
                
                <GroupBox Header="设置标记线">
                    <h:PolarChart  yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar/>
                            <h:RadiusAxis/>
                            <h:RadarAxis yDisplay="北京,上海,成都,哈尔滨,牡丹江,包头,青岛,宁夏,滨州,海林,穆棱,秦皇岛"/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>

                <GroupBox Header="设置标记线">
                    <h:PolarChart yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar yAxis="0,45,90,135,180,225,270,315"/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox> 
                
                <GroupBox Header="设置标记线" Height="500">
                    <h:PolarChart yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2.5,5,7.5,10">
                        <h:ViewLayerGroup>
                            <h:Radar/>
                            <h:RadiusAxis/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>

                <GroupBox Header="设置标记线" Height="500">
                    <h:PolarChart yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,5,10">
                        <h:ViewLayerGroup>
                            <h:Radar/>
                            <h:RadiusAxis/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>


                <GroupBox Header="设置标记线">
                    <h:PolarChart  yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar yAxis="0,90,180,270"/>
                            <h:RadiusAxis/>
                            <h:RadarAxis yAxis="0,90,180,270"  yDisplay="北京,上海,成都,牡丹江"/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>

                <GroupBox Header="设置标记线">
                    <h:PolarChart yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar yAxis="0,90,180,270"/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox>


                <GroupBox Header="设置标记线">
                    <h:PolarChart  yAxis="0,30,60,90,120,150,180,210,240,270,300,330" xAxis="0,2,4,6,8,10">
                        <h:ViewLayerGroup>
                            <h:Radar/>
                            <h:RadiusAxis/>
                            <h:RadarAxis/>
                        </h:ViewLayerGroup>
                    </h:PolarChart>
                </GroupBox> 
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
