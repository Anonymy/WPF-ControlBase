<UserControl x:Class="HeBianGu.App.Chart.View.Map.WorldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.App.Chart.View.Map"
             mc:Ignorable="d" 
             xmlns:h="QQ:908293466"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="世界地图">
            <h:GeoMap Style="{StaticResource S.GeoMap.World}"  Padding="10">
                <h:EffectBox Style="{StaticResource S.EffectBox.CircleWave}"
                             RenderTransform="{StaticResource {x:Static h:SystemKeys.TransformGroup}}"
                             Width="200" Height="200" Margin="2500,200,0,0"/>
            </h:GeoMap>
        </GroupBox>
    </Grid>
    
</UserControl>
