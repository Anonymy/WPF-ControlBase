<UserControl x:Class="HeBianGu.App.Chart.View.Map.WorldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.App.Chart.View.Map"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <GroupBox Header="世界地图">
            <h:GeoMap Padding="10" Style="{StaticResource S.GeoMap.World}">
                <h:EffectBox Width="200"
                             Height="200"
                             Margin="2500,200,0,0"
                             RenderTransform="{StaticResource {x:Static h:SystemKeys.TransformGroup}}"
                             Style="{StaticResource S.EffectBox.CircleWave}" />
            </h:GeoMap>
        </GroupBox>
    </Grid>

</UserControl>
