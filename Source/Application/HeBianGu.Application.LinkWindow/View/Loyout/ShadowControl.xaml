<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.ShadowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static h:ButtonKeys.Dynamic}}">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="300"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontSize" Value="30"/>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <GroupBox Header="阴影效果">
                <UniformGrid Columns="5" Height="800">
                    <Button Content="S.EffectShadow.1" Effect="{DynamicResource {x:Static h:EffectShadowKeys.Default1}}"/>
                    <Button Content="S.EffectShadow.2" Effect="{DynamicResource {x:Static h:EffectShadowKeys.Default2}}"/>
                    <Button Content="S.EffectShadow.3" Effect="{DynamicResource {x:Static h:EffectShadowKeys.Default3}}"/>
                    <Button Content="S.EffectShadow.4" Effect="{DynamicResource {x:Static h:EffectShadowKeys.Default4}}"/>
                    <Button Content="S.EffectShadow.5" Effect="{DynamicResource {x:Static h:EffectShadowKeys.Default5}}"/>
                </UniformGrid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
