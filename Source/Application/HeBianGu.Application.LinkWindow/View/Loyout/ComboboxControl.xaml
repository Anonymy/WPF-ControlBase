<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.ComboboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="1450"
             d:DesignWidth="1800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="下拉框（Default）">
                <UniformGrid Columns="3">
                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}" />
                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}" />
                    <ComboBox Width="500"
                              Margin="5"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3" />


                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.Label}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.Label}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.Label}}" />


                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClear}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClear}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClear}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.Clear}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              IsReadOnly="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="2"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.Clear}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.Clear}}" />

                    <!--<h:SearchCombobox  Width="500"  Grid.Row="1" SelectedIndex="0" Style="{DynamicResource Resource.Style.SearchCombobox.WithLogo}"
                                      SelectedItem="{Binding UpLoadViewModel.SelectItem.SelectBiochemical}" MyItemsSource="{StaticResource D.ArrayList.Items}"
                                        h:Cattach.Watermark="请输入搜索条件">
                    </h:SearchCombobox>-->
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="下拉框（Single）">
                <UniformGrid Columns="3">
                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}" />
                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}" />
                    <ComboBox Width="500"
                              Margin="5"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.LabelSingle}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.LabelSingle}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{DynamicResource {x:Static h:ComboBoxKeys.LabelSingle}}" />


                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClearSingle}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              h:Cattach.Watermark="请选择你要申报的大学"
                              IsEditable="True"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClearSingle}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别"
                              IsEnabled="False"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClearSingle}}" />

                    <!--<h:SearchCombobox  Width="500"  Grid.Row="1" SelectedIndex="0" Style="{DynamicResource Resource.Style.SearchCombobox.WithLogo}"
                                      SelectedItem="{Binding UpLoadViewModel.SelectItem.SelectBiochemical}" MyItemsSource="{StaticResource D.ArrayList.Items}"
                                        h:Cattach.Watermark="请输入搜索条件">
                    </h:SearchCombobox>-->
                </UniformGrid>
            </GroupBox>
            <GroupBox Header="下拉框（Circle）">
                <UniformGrid Columns="3">

                    <ComboBox Width="500"
                              Margin="5"
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.Circle}}" />

                    <ComboBox Width="500"
                              Margin="5"
                              h:Cattach.Title="选择类别："
                              ItemsSource="{StaticResource D.ArrayList.Items}"
                              SelectedIndex="3"
                              Style="{StaticResource {x:Static h:ComboBoxKeys.LabelCircle}}" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="下拉多选">
                <UniformGrid Columns="3">
                    <h:MultiComboBox Width="420"
                                     Margin="3"
                                     h:Cattach.Title="选择类别："
                                     h:Cattach.Watermark="请选择你要申报的大学"
                                     IsEditable="True"
                                     ItemsSource="{StaticResource D.ArrayList.Items}"
                                     Style="{StaticResource {x:Static local:MultiComboBox.ClearKey}}" />
                    <h:MultiComboBox Width="420"
                                     Margin="3"
                                     h:Cattach.Title="选择类别："
                                     h:Cattach.Watermark="请选择你要申报的大学"
                                     IsEditable="True"
                                     ItemsSource="{StaticResource D.ArrayList.Items}"
                                     Style="{StaticResource {x:Static h:MultiComboBox.LabelKey}}" />
                    <h:MultiComboBox Width="420"
                                     Margin="3"
                                     h:Cattach.Title="选择类别："
                                     h:Cattach.Watermark="请选择你要申报的大学"
                                     IsEditable="False"
                                     ItemsSource="{StaticResource D.ArrayList.Items}"
                                     Style="{StaticResource {x:Static h:MultiComboBox.LabelClearKey}}" />

                    <h:MultiComboBox Width="420"
                                     Margin="3"
                                     h:Cattach.Title="选择类别："
                                     h:Cattach.Watermark="请选择你要申报的大学"
                                     IsEditable="True"
                                     IsReadOnly="True"
                                     ItemsSource="{StaticResource D.ArrayList.Items}"
                                     SelectedIndex="3"
                                     Style="{StaticResource {x:Static h:MultiComboBox.LabelClearKey}}" />

                    <h:MultiComboBox Width="420"
                                     Margin="3"
                                     h:Cattach.Title="选择类别："
                                     h:Cattach.Watermark="请选择你要申报的大学"
                                     IsEditable="False"
                                     IsEnabled="False"
                                     ItemsSource="{StaticResource D.ArrayList.Items}"
                                     Style="{StaticResource {x:Static h:MultiComboBox.LabelClearKey}}" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="下拉筛选">
                <UniformGrid Columns="3">
                    <h:FComboBox HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 h:Cattach.Watermark="请选择你要申报的大学"
                                 BindingItems="{Binding ComboBoxItems, Mode=TwoWay}"
                                 DeleteMode="Delete"
                                 IsEditable="False"
                                 SearchMode="TextChanged"
                                 SelectedValuePath="Value" />
                </UniformGrid>
            </GroupBox>

            <h:Interaction.Behaviors>
                <h:FluidMoveBehavior AppliesTo="Self" FloatAbove="True" Duration="00:00:01" />
            </h:Interaction.Behaviors>
        </StackPanel>
    </ScrollViewer>
</UserControl>
