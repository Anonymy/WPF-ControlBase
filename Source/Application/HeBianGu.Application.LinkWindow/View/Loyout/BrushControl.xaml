<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.BrushControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="QQ:908293466"
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="1450"
             d:DesignWidth="1800"
             mc:Ignorable="d">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style BasedOn="{StaticResource S.FButton.Style.Default}" TargetType="{x:Type h:FButton}">
                <Setter Property="Width" Value="250" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <StackPanel.Resources>
                <Style BasedOn="{StaticResource {x:Static h:GroupBoxKeys.Default}}" TargetType="GroupBox">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </StackPanel.Resources>
            <StackPanel.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0" Color="Red" />
                    <GradientStop Offset="1" Color="{DynamicResource AccentColor}" />
                </LinearGradientBrush>
            </StackPanel.Background>
            <GroupBox Background="Transparent" Header="主题颜色">
                <UniformGrid Columns="4">

                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Accent}}" Content="S.Brush.Accent" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentMouseOverForeground}}" Content="S.Brush.Accent.MouseOver" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity9}}" Content="S.Brush.Accent.Opacity.9" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity8}}" Content="S.Brush.Accent.Opacity.8" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity7}}" Content="S.Brush.Accent.Opacity.7" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity6}}" Content="S.Brush.Accent.Opacity.6" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity5}}" Content="S.Brush.Accent.Opacity.5" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity4}}" Content="S.Brush.Accent.Opacity.4" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity3}}" Content="S.Brush.Accent.Opacity.3" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity2}}" Content="S.Brush.Accent.Opacity.2" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.AccentOpacity1}}" Content="S.Brush.Accent.Opacity.1" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="文本颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" Content="S.Brush.TextForeground.Tiltle" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}" Content="S.Brush.TextForeground.Default" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.ForegroundAssist}}" Content="S.Brush.TextForeground.Assist" />

                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.ForegroundLink}}" Content="S.Brush.TextForeground.Link" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}" Content="S.Brush.TextBackground.Default" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}" Content="S.Brush.TextBorderBrush.Default" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.BackgroundRowIndex}}" Content="S.Brush.RowIndex.BackGround" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                </UniformGrid>
            </GroupBox>


            <GroupBox Header="标注颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Red}}" Content="S.Brush.Red.Notice" />

                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Green}}" Content="S.Brush.Green.Notice" />

                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.LightGray}}" Content="S.Brush.LightGray.Notice" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.LightGrayOpacity5}}" Content="S.Brush.LightGray.NoticeOpacity.5" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Gray}}" Content="S.Brush.Gray.Notice" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.GrayOpacity5}}" Content="S.Brush.Gray.Notice.Opacity.5" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Orange}}" Content="S.Brush.Orange.Notice" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Black}}" Content="S.Brush.Black.Notice" />


                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.White}}" Content="S.Brush.White.Notice" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy8}}" Content="S.Brush.White.Opactiy.8" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy6}}" Content="S.Brush.White.Opactiy.6" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy4}}" Content="S.Brush.White.Opactiy.4" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.WhiteOpactiy2}}" Content="S.Brush.White.Opactiy.2" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />


                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark10}}" Content="S.Brush.Dark.10" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark9}}" Content="S.Brush.Dark.9" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark8}}" Content="S.Brush.Dark.8" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark7}}" Content="S.Brush.Dark.7" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark6}}" Content="S.Brush.Dark.6" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark5}}" Content="S.Brush.Dark.5" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark4}}" Content="S.Brush.Dark.4" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark3}}" Content="S.Brush.Dark.3" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark5}}" Content="S.Brush.Dark.2" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark1}}" Content="S.Brush.Dark.1" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.Dark0Key}}" Content="S.Brush.Dark.0" />

                </UniformGrid>
            </GroupBox>

            <GroupBox Header="其他颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource S.Brush.WindowBackground}" Content="S.Brush.WindowBackground" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                    <h:FButton Background="{DynamicResource {x:Static h:BrushKeys.BackgroundRowIndex}}" Content="S.Brush.RowIndex.BackGround" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundTitle}}" />
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="渐变颜色">
                <UniformGrid Columns="4">
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Offset="0" Color="Yellow" />
                                <GradientStop Offset="0.5" Color="Red" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Offset="0" Color="Yellow" />
                                <GradientStop Offset="0.5" Color="Red" />
                                <GradientStop Offset="1" Color="Green" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Offset="0" Color="Yellow" />
                                <GradientStop Offset="0.33" Color="Red" />
                                <GradientStop Offset="0.66" Color="Green" />
                                <GradientStop Offset="1" Color="Blue" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Offset="0" Color="Yellow" />
                                <GradientStop Offset="0.25" Color="Red" />
                                <GradientStop Offset="0.50" Color="Green" />
                                <GradientStop Offset="0.75" Color="Blue" />
                                <GradientStop Offset="1" Color="Purple" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </UniformGrid>
            </GroupBox>


            <GroupBox Header="特殊画刷">
                <UniformGrid Columns="4">
                    <Rectangle Height="300">
                        <Rectangle.Fill>
                            <RadialGradientBrush>
                                <GradientStop Offset="0" Color="Red" />
                                <GradientStop Offset="0.4" Color="Red" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </RadialGradientBrush>
                        </Rectangle.Fill>

                        <Rectangle.OpacityMask>
                            <DrawingBrush TileMode="Tile" Viewport="0.1 0.1 0.1 0.1" ViewportUnits="RelativeToBoundingBox">
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing Brush="Black">
                                        <GeometryDrawing.Geometry>
                                            <EllipseGeometry RadiusX="10" RadiusY="10" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>

                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush>
                                <GradientStop Offset="-1" Color="Transparent" />
                                <GradientStop Offset="1" Color="Green" />
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.OpacityMask>
                            <ImageBrush ImageSource="/HeBianGu.General.WpfControlLib;component/Resources/logo.png" />
                        </Grid.OpacityMask>
                    </Grid>
                </UniformGrid>
            </GroupBox>



            <GroupBox Height="600" Header="马赛克">
                <UniformGrid Columns="4">
                    <Grid>
                        <Grid.Background>
                            <DrawingBrush Stretch="Uniform"
                                          TileMode="Tile"
                                          Viewport="0 0 150 150"
                                          ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 100 100" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="50 50 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>

                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>

                    <Grid>
                        <Grid.Background>
                            <DrawingBrush Stretch="Uniform"
                                          TileMode="Tile"
                                          Viewport="0 0 50 50"
                                          ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 100 100" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="50 50 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>

                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>

                    <Grid>
                        <Grid.Background>
                            <DrawingBrush Stretch="Uniform"
                                          TileMode="Tile"
                                          Viewport="0 0 20 20"
                                          ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 100 100" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="50 50 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>

                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>

                    <Grid>
                        <Grid.Background>
                            <DrawingBrush Stretch="Uniform"
                                          TileMode="Tile"
                                          Viewport="0 0 10 10"
                                          ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 100 100" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="50 50 50 50" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>

                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>

                    <Grid>
                        <Grid.Background>
                            <DrawingBrush Stretch="Uniform"
                                          TileMode="Tile"
                                          Viewport="0 0 50 50"
                                          ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0 0 100 100" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>

                                        <GeometryDrawing Brush="Red">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry Center="75,75" RadiusX="25" RadiusY="25" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>

                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Background>
                    </Grid>
                </UniformGrid>

            </GroupBox>


        </StackPanel>
    </ScrollViewer>
</UserControl>
