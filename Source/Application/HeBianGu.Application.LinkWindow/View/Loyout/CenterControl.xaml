<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.CenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border Margin="0,0" Background="{DynamicResource {x:Static h:BrushKeys.Dark0_6}}" CornerRadius="{DynamicResource {x:Static h:CornerRadiusKeys.Bottom}}" />

        <Border Grid.Row="2"
                Margin="0,0"
                Background="{DynamicResource {x:Static h:BrushKeys.Dark0_6}}"
                CornerRadius="{DynamicResource {x:Static h:CornerRadiusKeys.Bottom}}" />

        <!--<TextBlock Grid.Row="2" Foreground="White" Margin="0 10 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="https://github.com/HeBianGu/WPF-ControlBase">
            <Hyperlink NavigateUri="https://github.com/HeBianGu/WPF-ControlBase">https://github.com/HeBianGu/WPF-ControlBase</Hyperlink>
        </TextBlock>-->

        <h:MvcNavigationBar Height="30"
                            Margin="50,0"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding Navigation, Mode=TwoWay}"
                            SelectedItem="{Binding SelectLink}" />

        <Button Margin="10,0"
                   HorizontalAlignment="Left"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Left}"
                   h:Cattach.Icon="&#xe921;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="基础控件" />

        <Button Margin="10,0"
                   HorizontalAlignment="Right"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Right}"
                   h:Cattach.Icon="&#xe616;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="自定义控件" />

        <Button Grid.Row="2"
                   Margin="10,0"
                   HorizontalAlignment="Left"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Top}"
                   h:Cattach.Icon="&#xeb3a;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="菜单栏" />

        <Button Grid.Row="2"
                   Margin="10,0"
                   HorizontalAlignment="Right"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Bottom}"
                   h:Cattach.Icon="&#xeb3a;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="状态栏" />

        <Grid Grid.Row="1">
            <h:LinkActionFrame LinkAction="{Binding SelectLink}" />
        </Grid>

    </Grid>

    <h:Interaction.Triggers>
        <h:EventTrigger EventName="Loaded">
            <h:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="OverView" />
        </h:EventTrigger>
    </h:Interaction.Triggers>
</UserControl>
