<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.PropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.LinkWindow" 
             xmlns:h="QQ:908293466" 
             xmlns:local1="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Mvc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <StackPanel.Resources>
                <local:Student x:Key="S.Student.HeBianGu" 
                       Name="河边骨" 
                       Address="四川省成都市高新区" 
                       Class="四年级" 
                       Emall="7777777777@QQ.com" Age="33" Score="99.99" IsEnbled="True" time="2019-09-09"/>
            </StackPanel.Resources>
            <GroupBox Header="S.PropertyGrid.Default">
                <Viewbox Width="600">
                    <h:PropertyGrid Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}"/>
                </Viewbox>
            </GroupBox>

            <GroupBox Header="S.PropertyGrid.Default.WithSumit">
                <Viewbox Width="600">
                    <h:PropertyGrid  Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" Style="{DynamicResource S.PropertyGrid.Default.WithSumit}"/>
                </Viewbox>
            </GroupBox>


            <GroupBox Header="S.PropertyGrid.Default.WithSumitClose">
                <Viewbox Width="600">
                    <h:PropertyGrid  Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" Style="{DynamicResource S.PropertyGrid.Default.WithSumitClose}"/>
                </Viewbox>
            </GroupBox>

            <GroupBox Header="S.PropertyGrid.Single">
                <Viewbox Width="600">
                    <h:PropertyGrid  Title="学生信息" Style="{DynamicResource S.PropertyGrid.Single}"  SelectObject="{StaticResource S.Student.HeBianGu}"/>
                </Viewbox>
            </GroupBox>

            <GroupBox Header="S.PropertyGrid.Single 自定义子项样式">
                <Viewbox Width="600">
                    <h:PropertyGrid Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:PropertyGrid.Resources>
                            <DataTemplate DataType="{x:Type h:TextPropertyItem}">
                                <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=h:PropertyGrid},Path=Width-5}" 
              Height="35" Margin="5,0" Visibility="{Binding Visibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}"  Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>

                                    <TextBlock Text="{Binding Flag}" 
                       Grid.Column="1" Margin="5,0"
                       FontSize="14"  Foreground="{DynamicResource {x:Static h:BrushKeys.Red}}" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"/>

                                    <h:FTextBox Text="{Binding Value,UpdateSourceTrigger=PropertyChanged}" 
                            Style="{DynamicResource S.FTextBox.UnderLine.Clear}"  Width="Auto" IsEnabled="{Binding ReadOnly}"
                     Grid.Column="2" Height="30" h:Cattach.Icon=""
                     VerticalContentAlignment="Center" 
                     HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

                                    <TextBlock Text="&#xe626;" Grid.Column="3" Style="{DynamicResource S.TextBlock.Icon }"
                       Foreground="{DynamicResource {x:Static h:BrushKeys.Red}}" 
                       Visibility="{Binding Message,Converter={x:Static h:XConverter.VisibilityWithOutStringConverter},ConverterParameter={x:Null},Mode=TwoWay}"
                       FontSize="14" TextTrimming="CharacterEllipsis" ToolTip="{Binding Message}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </h:PropertyGrid.Resources>
                    </h:PropertyGrid>
                </Viewbox>
            </GroupBox>


            <GroupBox Header="S.PropertyGrid.Default 自定义按钮">
                <Viewbox Width="600">
                    <h:PropertyGrid Title="学生信息" Style="{DynamicResource S.PropertyGrid.Default}"  SelectObject="{StaticResource S.Student.HeBianGu}">
                        <h:PropertyGrid.BottomContent>
                            <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                                <h:FButton Content="自定义按钮"/>
                                <h:FButton Content="自定义按钮" Margin="10,0,0,0"/>
                            </StackPanel>
                        </h:PropertyGrid.BottomContent>
                    </h:PropertyGrid>
                </Viewbox>
            </GroupBox>
        </StackPanel>

    </ScrollViewer>
</UserControl>
