<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.PasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="自定义密码文本输入框">
                <StackPanel>
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.Default}}" h:Cattach.Watermark="请输入姓名" Margin="3"  />
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.Clear}}" Margin="3" />
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.Label}}" h:Cattach.Label="密码：" Margin="3" />
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.LabelClear}}" h:Cattach.Label="密码：" Margin="3"/>
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.Default}}"  IsEnabled="False" Password="111" Margin="3"/>

                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.LabelClearSingle}}" h:Cattach.Label="密码：" Margin="3"/>
                    <PasswordBox Style="{DynamicResource {x:Static h:PasswordBoxKeys.LabelSingle}}"  h:Cattach.Label="密码：" IsEnabled="False" Password="111" Margin="3"/>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="绑定密码文本输入框">
                <StackPanel>
                    <h:FTextBox  Margin="3" 
                                                   h:Cattach.Watermark="请输入绑定密码" 
                                                   Style="{StaticResource S.FTextBox.Label}" 
                                                   h:Cattach.Label="输入："
                                                   x:Name="tb_bind"/>


                    <h:PasswordBox x:Name="bpw_bindpassword" 
                                                          h:Cattach.Watermark="请输入姓名" Style="{StaticResource S.Password.Default}"
                                                          PassWord="{Binding ElementName=tb_bind,Path=Text,Mode=TwoWay}" Margin="3"  />

                    <h:PasswordBox Style="{StaticResource S.Password.Default}" h:Cattach.Watermark="请输入姓名" Margin="3"  />
                    <h:PasswordBox Style="{StaticResource S.Password.Clear}" h:Cattach.Watermark="请输入姓名" Margin="3" />
                    <h:PasswordBox Style="{StaticResource S.Password.Label}" h:Cattach.Watermark="请输入姓名" h:Cattach.Label="密码：" Margin="3" />
                    <h:PasswordBox  Style="{StaticResource S.Password.LabelClear}" h:Cattach.Watermark="请输入姓名" h:Cattach.Label="密码：" Margin="3"/>
                    <h:PasswordBox  Style="{StaticResource S.Password.Default}" h:Cattach.Watermark="请输入姓名"  IsEnabled="False" PassWord="111" Margin="3"/>


                    <h:PasswordBox Style="{StaticResource S.Password.Single}" h:Cattach.Watermark="请输入姓名" h:Cattach.Label="密码：" Margin="3" />
                    <h:PasswordBox  Style="{StaticResource S.Password.Sinple.LabelClear}" h:Cattach.Watermark="请输入姓名" h:Cattach.Label="密码：" Margin="3"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
