<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.OverViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HeBianGu.Application.LinkWindow"
             xmlns:h="QQ:908293466"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:local1="clr-namespace:HeBianGu.Application.LinkWindow"
             mc:Ignorable="d"
             d:DesignHeight="18000" d:DesignWidth="550">
    <UserControl.Resources> 
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static h:ButtonKeys.Dynamic}}">
            <Setter Property="Margin" Value="5,0,0,5"/>
        </Style>
        <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Static h:GroupBoxKeys.Default}}">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Grid.Row="1">
            <h:WaterFallFlowControl ListWidth="400" Margin="5">
            
                <GroupBox Header="对话框">
                    <StackPanel>
                        <Button Content="默认按钮">
                            <h:Interaction.Triggers>
                                <h:EventTrigger EventName="Click">
                                    <h:ChangePropertyAction PropertyName="Content" Value="点击了成功"/>
                                </h:EventTrigger> 
                            </h:Interaction.Triggers>
                        </Button>

                        <Button Content="确定消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowDialogMessage"/>
                        <Button Content="确定取消消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowResultMessge"/> 
                        <Button Content="蒙版消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowCoverMessge"/> 
                        <Button Content="字符串进度提示" Command="{Binding RelayCommand}" CommandParameter="Button.ShowStringProgress"/>
                        <Button Content="百分比进度提示" Command="{Binding RelayCommand}" CommandParameter="Button.ShowPercentProgress"/>
                        <Button Content="等待消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowWaittingMessge"/>

                        <Button Content="提示消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowSnackMessage"/>
                        <Button Content="气泡消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowNotifyMessage"/>
                        <Button Content="自定义气泡消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowIdentifyNotifyMessage"/>

                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="消息窗口">
                    <StackPanel>
                        <Button Content="提示消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowSumitMessage"/>
                        <Button Content="对话消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowResultMessage"/>
                        <Button Content="自定义消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowIndentifyMessage"/>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="窗口气泡列表">
                    <StackPanel>
                        <Button Content="Error" Command="{Binding RelayCommand}" CommandParameter="Button.Message.ErrorWindow"/>
                        <Button Content="Info" Command="{Binding RelayCommand}" CommandParameter="Button.Message.InfoWindow"/>
                        <Button Content="Success" Command="{Binding RelayCommand}" CommandParameter="Button.Message.SuccessWindow"/>
                        <Button Content="Warnning" Command="{Binding RelayCommand}" CommandParameter="Button.Message.WarnWindow"/>
                        <Button Content="Fatal" Command="{Binding RelayCommand}" CommandParameter="Button.Message.FatalWindow"/>
                        <Button Content="Off" Command="{Binding RelayCommand}" CommandParameter="Button.Message.OffWindow"/>
                        <Button Content="Dailog" Command="{Binding RelayCommand}" CommandParameter="Button.Message.DailogWindow"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="系统气泡列表">
                    <StackPanel>
                        <Button Content="Error" Command="{Binding RelayCommand}" CommandParameter="Button.Message.ErrorSystem"/>
                        <Button Content="Info" Command="{Binding RelayCommand}" CommandParameter="Button.Message.InfoSystem"/>
                        <Button Content="Success" Command="{Binding RelayCommand}" CommandParameter="Button.Message.SuccessSystem"/>
                        <Button Content="Warnning" Command="{Binding RelayCommand}" CommandParameter="Button.Message.WarnSystem"/>
                        <Button Content="Fatal" Command="{Binding RelayCommand}" CommandParameter="Button.Message.FatalSystem"/>
                        <Button Content="Off" Command="{Binding RelayCommand}" CommandParameter="Button.Message.OffSystem"/>
                        <Button Content="Dailog" Command="{Binding RelayCommand}" CommandParameter="Button.Message.DailogSystem"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="程序升级">
                    <StackPanel>
                        <Button Content="检查更新"  Command="{Binding RelayCommand}" CommandParameter="Button.Upgrade"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="单选按钮">
                    <StackPanel>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" IsChecked="True" GroupName="ss">星期一</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期二</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期三</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期四</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期五</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期六</RadioButton>
                        <RadioButton Style="{StaticResource {x:Static h:RadioButtonKeys.Box}}" Margin="1" Width="100" GroupName="ss">星期日</RadioButton>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Single">
                    <StackPanel  HorizontalAlignment="Center">

                        <TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{StaticResource {x:Static h:TextBoxKeys.LabelSingle}}" h:Cattach.Title="户口地址 "/>
                        <TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{StaticResource {x:Static h:TextBoxKeys.LabelClearSingle}}" h:Cattach.Title="户口地址 "/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.OpenFile}}"/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.OpenFolder}}"/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.SaveFile}}"/>
                        <h:PasswordBox Margin="3" Style="{DynamicResource S.Password.Single.LabelClear}" h:Cattach.Title="设置密码 "  h:Cattach.Watermark="请输入密码" />
                        <h:PasswordBox Margin="3" Style="{StaticResource {x:Static local:PasswordBox.SingleKey}}" h:Cattach.Watermark="请输入密码" h:Cattach.Title="确认密码 "/>
                        <ComboBox Margin="3" ItemsSource="{StaticResource D.ArrayList.Items}" h:Cattach.Title="选择类别 " Style="{DynamicResource {x:Static h:ComboBoxKeys.LabelSingle}}"  h:Cattach.Watermark="请选择你要申报的大学" /> 
                        <ComboBox Margin="3" ItemsSource="{StaticResource D.ArrayList.Items}" h:Cattach.Title="选择类别 " Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClearSingle}}"  h:Cattach.Watermark="请选择你要申报的大学" />
                        <DatePicker Margin="3" Style="{DynamicResource {x:Static h:DatePickerKeys.LabelClearSingle}}" h:Cattach.Title="出生日期 "/>
                        <DatePicker Margin="3" Style="{DynamicResource {x:Static h:DatePickerKeys.LabelSingle}}" h:Cattach.Title="死亡日期 " SelectedDate="{x:Static system:DateTime.Today}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                            <Button Content="取消" Style="{DynamicResource {x:Static h:ButtonKeys.BorderBrushTransparent}}" Width="120" Margin="10,0"/>
                            <Button Content="确定"  Style="{DynamicResource {x:Static h:ButtonKeys.Dynamic}}"/>
                        </StackPanel>
                        
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Default">
                    <StackPanel  HorizontalAlignment="Center">

                        <TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{StaticResource x:Static h:TextBoxKeys.Label}}" h:Cattach.Title="户口地址 "/>
                        <TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{StaticResource {x:Static h:TextBoxKeys.LabelClear}}" h:Cattach.Title="户口地址 "/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.OpenFile}}"/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.OpenFolder}}"/>
                        <TextBox Margin="3" Style="{StaticResource {x:Static h:TextBoxKeys.SaveFile}}"/>
                        <h:PasswordBox Margin="3" Style="{DynamicResource {x:Static local:PasswordBox.LabelClearKey}}" h:Cattach.Title="设置密码 "  h:Cattach.Watermark="请输入密码" />
                        <h:PasswordBox Margin="3" Style="{StaticResource {x:Static local:PasswordBox.LabelKey}}" h:Cattach.Watermark="请输入密码" h:Cattach.Title="确认密码 "/>
                        <ComboBox Margin="3"  ItemsSource="{StaticResource D.ArrayList.Items}" h:Cattach.Title="选择类别 " Style="{DynamicResource {x:Static h:ComboBoxKeys.Label}}"  h:Cattach.Watermark="请选择你要申报的大学" />
                        <ComboBox Margin="3"  ItemsSource="{StaticResource D.ArrayList.Items}" h:Cattach.Title="选择类别 " Style="{DynamicResource {x:Static h:ComboBoxKeys.Label}}" h:Cattach.Watermark="请选择你要申报的大学" IsEditable="True" />
                        <ComboBox Margin="3"  ItemsSource="{StaticResource D.ArrayList.Items}" h:Cattach.Title="选择类别 " Style="{StaticResource {x:Static h:ComboBoxKeys.LabelClear}}"  h:Cattach.Watermark="请选择你要申报的大学" />
                        <DatePicker Margin="3" Style="{DynamicResource {x:Static h:DatePickerKeys.LabelClear}}" h:Cattach.Title="出生日期 "/>
                        <DatePicker Margin="3" Style="{DynamicResource {x:Static h:DatePickerKeys.Label}}" h:Cattach.Title="死亡日期 " SelectedDate="{x:Static system:DateTime.Today}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3" >
                            <Button Content="取消" Style="{DynamicResource {x:Static h:ButtonKeys.BorderBrushTransparent}}"  Width="120"  Margin="10,0"/>
                            <Button Content="确定"  Style="{DynamicResource {x:Static h:ButtonKeys.Dynamic}}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Circle">
                    <StackPanel  HorizontalAlignment="Center">

                        <TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{DynamicResource {x:Static h:TextBoxKeys.LabelCircle}}" h:Cattach.Title="户口地址："/>
                        <TextBox Margin="3" h:Cattach.Watermark="请输入家庭地址" Style="{DynamicResource {x:Static h:TextBoxKeys.LabelClearCircle}}" h:Cattach.Title="户口家庭："/>
                        <!--<TextBox Margin="3" h:Cattach.Watermark="请输入户口地址" Style="{StaticResource {x:Static h:TextBoxKeys.LabelClear}}" h:Cattach.Title="户口地址 "/>-->
                        <h:PasswordBox Margin="3" Style="{DynamicResource {x:Static local:PasswordBox.LabelCircleKey}}" h:Cattach.Watermark="请输入姓名" h:Cattach.Title="确认密码："/>
                        <ComboBox Margin="3"  ItemsSource="{DynamicResource D.ArrayList.Items}" h:Cattach.Title="选择类别：" Style="{DynamicResource {x:Static h:ComboBoxKeys.LabelCircle}}"  h:Cattach.Watermark="请选择你要申报的大学" />
                        <DatePicker Margin="3" Style="{DynamicResource {x:Static h:DatePickerKeys.LabelCircle}}" h:Cattach.Title="出生日期："/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3" >
                            <Button Content="取消" Style="{DynamicResource {x:Static h:ButtonKeys.CircleTransparent}}"  Width="120"  Margin="10,0"/>
                            <Button Content="确定" Style="{DynamicResource {x:Static h:ButtonKeys.MouseOver}}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="加载控件">
                    <StackPanel>
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5" Style="{StaticResource S.ModernProgressRing.ChasingDots}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.Circle}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.DoubleBounce}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.Pulse}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.RotatingPlane}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.ThreeBounce}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.WanderingCubes}" />
                        <h:ModernProgressRing IsActive="True" Width="80" Height="80" Margin="5"  Style="{StaticResource S.ModernProgressRing.Wave}" />


                        <h:RingBox Width="80" 
                                                   Height="80" 
                                                   Margin="15" IsActive="True"/>

                        <h:ProgressBarControl  CanvasSize="100" 
                                                               EllipseCount="15" 
                                                               EllipseSize="10"
                                                               StepAngle="10" 
                                                               TimeSpan="50"/>

                        <ProgressBar Minimum="0" Maximum="1" Height="50"  Width="500" 
                                         IsIndeterminate="True" Margin="5"   
                                         Style="{StaticResource {x:Static h:ProgressBarKeys.RunningPoint}}"/>



                        <h:Sprocket Margin="0,10,0,0" Interval="60" IsIndeterminate="True" />
                        <h:Sprocket Margin="0,10,0,0" Width="50" Height="50" TickWidth="3" TickCount="40" Interval="30" IsIndeterminate="True"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="分页控件">
                    <StackPanel>

                        <GroupBox Header="样式一">
                            <h:AnimatedTabControl Height="200" >
                                <TabItem Header="设备配置">
                                    <TextBlock Text=""  Background="Yellow" TextAlignment="Center" />
                                </TabItem>

                                <TabItem Header="基本设置">
                                    <Button Content="" Background="Blue"/>
                                </TabItem>

                                <TabItem Header="操作设置">
                                    <Button Content="" Background="Green"/>
                                </TabItem>
                            </h:AnimatedTabControl>
                        </GroupBox>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="导航控件">
                    <h:LinkGroupExpander >
                        <h:LinkActionGroup DisplayName="项目管理" Logo="&#xe69f;">
                            <h:LinkActionGroup.Links>
                                <h:LinkAction  DisplayName="项目进度" Logo="&#xe69f;"  />
                                <h:LinkAction  DisplayName="项目成本"  Logo="&#xe6a3;" />
                                <h:LinkAction  DisplayName="开发周期"  Logo="&#xe6a3;"  />
                                <h:LinkAction  DisplayName="人员安排"  Logo="&#xe6a3;" />
                                <h:LinkAction  DisplayName="委外加工"  Logo="&#xe6a3;" />
                                <h:LinkAction  DisplayName="生产排产"  Logo="&#xe6a3;" />
                                <h:LinkAction  DisplayName="仓储物流"  Logo="&#xe6a3;" />
                            </h:LinkActionGroup.Links>
                        </h:LinkActionGroup>


                        <h:LinkActionGroup DisplayName="基础管理" Logo="&#xe69f;">
                            <h:LinkActionGroup.Links>
                                <h:LinkAction  DisplayName="人员管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="用户管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="日志管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="设备管理" Logo="&#xe69f;"/>
                            </h:LinkActionGroup.Links>
                        </h:LinkActionGroup>

                        <h:LinkActionGroup DisplayName="权限管理" Logo="&#xe69f;">
                            <h:LinkActionGroup.Links>
                                <h:LinkAction  DisplayName="角色管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="用户管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="权限管理" Logo="&#xe69f;"/>
                                <h:LinkAction  DisplayName="策略管理" Logo="&#xe69f;"/>
                            </h:LinkActionGroup.Links>
                        </h:LinkActionGroup>

                    </h:LinkGroupExpander>

                </GroupBox>

                <GroupBox Header="树形控件">
                    <TreeView  Grid.Column="0" HorizontalAlignment="Stretch" BorderBrush="Transparent" Height="500"
                                   ItemsSource="{Binding Source={StaticResource S.XmlDataProvider.TreeView.Default}}" Background="Transparent" >
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding XPath=Folder}">
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="{Binding XPath=@Icon}" FontSize="15" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="a" Text="{Binding XPath=@Name}"  VerticalAlignment="Center"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </GroupBox>

                <GroupBox Header="数字控件">
                    <h:NumericControl/>
                </GroupBox>

                <GroupBox Header="Property控件">
                    <Grid>
                        <Grid.Resources>
                            <local:Student x:Key="S.Student.HeBianGu"  Name="河边骨"  Address="四川省成都市高新区"  Class="四年级" Emall="7777777777@QQ.com" Age="33" Score="99.99" IsEnbled="True" time="2019-09-09"/>
                        </Grid.Resources>
                        <Viewbox Width="400">
                            <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                                <h:Interaction.Behaviors>
                                    <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                                    <h:SelectZIndexElementBehavior/>
                                </h:Interaction.Behaviors>
                            </h:PropertyGrid>
                        </Viewbox>
                    </Grid>
                </GroupBox>
               

                <GroupBox Header="轮播控件">
                    <h:CarouselControl IsCenter="True" AutoRun="True" Width="400" Height="200" VerticalAlignment="Center">
                        <Grid Width="400" Background="Yellow"/>
                        <Grid Width="400" Background="Green"/>
                        <Grid Width="400" Background="Blue"/>
                        <Grid Width="400" Background="Red"/>
                        <Grid Width="400" Background="Black"/>
                        <Grid Width="400" Background="Purple"/>
                    </h:CarouselControl>
                </GroupBox>

                <!--<GroupBox Header="Gif播放器">
                    <h:GifImage x:Name="GifImageMain" Margin="32" Width="400" Height="300">
                        <h:GifImage.Source>
                            <BitmapImage UriSource="/HeBianGu.Applications.ControlBase.LinkWindow;component/Resources/动画封装.gif"/>
                        </h:GifImage.Source>
                    </h:GifImage>
                </GroupBox>-->


                <GroupBox Header="评价控件">

                    <StackPanel>
                        <h:EvaluateControl  Style="{DynamicResource S.EvaluateControl.Default}" 
                               TotalCount="10" SelectedIndex="2">

                        </h:EvaluateControl>
                        <h:EvaluateControl  Icon="&#xed00;" Style="{DynamicResource S.EvaluateControl.Default}" 
                               TotalCount="10" SelectedIndex="4">
                        </h:EvaluateControl>

                        <h:EvaluateControl Icon="&#xe72b;"  Style="{DynamicResource S.EvaluateControl.Default}" 
                               TotalCount="10" SelectedIndex="6">
                        </h:EvaluateControl>

                        <h:EvaluateControl Icon="&#xe7c4;" Style="{DynamicResource S.EvaluateControl.Default}" 
                               TotalCount="10" SelectedIndex="8">
                        </h:EvaluateControl>
                        <h:EvaluateControl Icon="&#xe77a;" Style="{DynamicResource S.EvaluateControl.Default}" 
                               TotalCount="10" SelectedIndex="8">
                        </h:EvaluateControl>
                    </StackPanel>
                </GroupBox>

            </h:WaterFallFlowControl>
        </ScrollViewer>
    </Grid>
</UserControl>
