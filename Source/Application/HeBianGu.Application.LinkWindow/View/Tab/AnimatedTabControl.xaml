<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Tab.AnimatedTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Tab"
             xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <h:AnimatedTabControl >
            <TabItem Header="设备配置">
                <TextBlock Text="第一页"  Background="Yellow" TextAlignment="Center" />
            </TabItem>

            <TabItem Header="基本设置">
                <Button Content="第二页" Background="Blue"/>
            </TabItem>

            <TabItem Header="操作设置">
                <Button Content="第三页" Background="Green"/>
            </TabItem>
        </h:AnimatedTabControl>
    </Grid>
</UserControl>
