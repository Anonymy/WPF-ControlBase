<UserControl x:Class="HeBianGu.Application.PhoneWindow.View.Personal.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.PhoneWindow.View.Personal" xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}">
            <Setter Property="h:Cattach.Orientation" Value="Vertical"/>
            <Setter Property="h:Cattach.IconSize" Value="20"/> 
            <Setter Property="h:Cattach.Icon" Value="&#xe7fd;"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="ListBox" BasedOn="{StaticResource {x:Static h:ListBoxKeys.Single}}">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <ItemContainerTemplate>
                            <Grid Height="{DynamicResource {x:Static h:SystemKeys.ItemHeight}}" Background="{DynamicResource {x:Static h:BrushKeys.BackgroundDefault}}">
                                <DockPanel LastChildFill="False" Margin="20,0">
                                    <TextBlock Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Text="{Binding Logo}"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" Margin="10,0"/>
                                    <TextBlock Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Text="{Binding Logo}" DockPanel.Dock="Right"/>
                                </DockPanel>
                                <Separator VerticalAlignment="Bottom" Margin="0" Background="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"/>
                            </Grid>
                        </ItemContainerTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <StackPanel>
            <Grid Background="{DynamicResource {x:Static h:BrushKeys.Accent}}" Height="100">
                <Button Content=" 登陆/注册" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}" h:Cattach.IconSize="50" FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header4}}" HorizontalAlignment="Left" Margin="30,0"/>
            </Grid>

            <ListBox>
                <h:LinkAction DisplayName="个人信息"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>
                
                <h:LinkAction DisplayName="任职受雇信息"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>
                
                <h:LinkAction DisplayName="家庭成员信息"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

                <h:LinkAction DisplayName="银行卡"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

            </ListBox>

            <ListBox Margin="0,5">
                <h:LinkAction DisplayName="安全中心"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>
            </ListBox>

            <ListBox>

                <h:LinkAction DisplayName="帮助"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

                <h:LinkAction DisplayName="我要咨询"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

                <h:LinkAction DisplayName="关于"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

                <h:LinkAction DisplayName="首页常用业务管理"  Logo="&#xe7fd;" Controller="Loyout" Action="Home"/>

            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
