<UserControl x:Class="HeBianGu.Application.PhoneWindow.View.Service.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.PhoneWindow.View.Service" xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="{DynamicResource S.Brush.Accent}" Height="{DynamicResource S.Window.Row.Height}" CornerRadius="{DynamicResource S.Window.Item.CornerRadius.Top}">
                <TextBlock Text="服务" FontSize="{DynamicResource S.FontSize.Header.4}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource S.Brush.TextForeground.White}"/>
            </Border>
            <ScrollViewer Margin="2,0">
                <ItemsControl>
                    <GroupBox Header="申报信息查询" Style="{StaticResource S.GroupBox.UnderLine}">
                        <UniformGrid Columns="3" Margin="0,10">
                            <h:FButton Content="申报查询"/>

                            <h:FButton Content="专项附加扣除信息查询"/>

                            <h:FButton Content="收入纳税明细查询"/>

                        </UniformGrid>
                    </GroupBox>

                    <GroupBox Header="备案信息查询" Style="{StaticResource S.GroupBox.UnderLine}">
                        <UniformGrid Columns="3" Margin="0,10">
                            <h:FButton Content="天使投资人个人所得税抵扣备案查询"/>

                            <h:FButton Content="非货币性资产投资分期缴纳备案查询"/>

                            <h:FButton Content="税收优惠备案查询"/>

                        </UniformGrid>
                    </GroupBox>

                    <GroupBox Header="其他查询" Style="{StaticResource S.GroupBox.UnderLine}">
                        <UniformGrid Columns="3" Margin="0,10">
                            <h:FButton Content="异议处理查询"/>
                            <h:FButton Content="税务文书查询"/>
                            <h:FButton Content="涉税专业服务机构查询"/>
                        </UniformGrid>
                    </GroupBox>

                    <GroupBox Header="公众服务" Style="{StaticResource S.GroupBox.UnderLine}">
                        <UniformGrid Columns="3" Margin="0,10">
                            <h:FButton Content="票证查验"/>
                            <h:FButton Content="通知公告"/>
                            <h:FButton Content="税收政策解读"/>
                            <h:FButton Content="办税指南"/>
                            <h:FButton Content="热点问题"/>
                        </UniformGrid>
                    </GroupBox>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
