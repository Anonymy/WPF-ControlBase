<UserControl x:Class="HeBianGu.Application.PhoneWindow.View.Loyout.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.PhoneWindow.View.Loyout" xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}">
            <Setter Property="h:Cattach.Orientation" Value="Vertical"/>
            <Setter Property="h:Cattach.IconSize" Value="20"/> 
            <Setter Property="h:Cattach.Icon" Value="&#xe7fd;"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel LastChildFill="False">
            <Border DockPanel.Dock="Top" Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}" CornerRadius="{DynamicResource {x:Static h:CornerRadiusKeys.Top}}">
                <DockPanel LastChildFill="False">

                    <TextBlock Text="&#xe7fd;" Margin="10,0,0,0" Style="{DynamicResource {x:Static h:TextBlockKeys.Icon}}" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>

                    <TextBlock Text="个人所得税" Style="{DynamicResource {x:Static h:TextBlockKeys.Default}}" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>

                    <StackPanel Orientation="Horizontal" Margin="10,0" DockPanel.Dock="Right">
                        <Button  h:Cattach.Icon="&#xe7fd;" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>
                        <Button  h:Cattach.Icon="&#xe7fd;" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>
                        <Button  Style="{DynamicResource {x:Static h:ButtonKeys.CloseWindow}}" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
