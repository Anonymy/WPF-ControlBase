<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Tab.TabCenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="https://github.com/HeBianGu"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource {x:Static h:BrushKeys.Gray}}" />

        <!--<Button Margin="10,0"
                   HorizontalAlignment="Left"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Left}"
                   Icon="&#xe921;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="数据列表" />

        <Button Margin="10,0"
                   HorizontalAlignment="Right"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Right}"
                   Icon="&#xe616;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="属性列表" />

        <Button Grid.Row="2"
                   Margin="10,0"
                   HorizontalAlignment="Left"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Top}"
                   Icon="&#xeb3a;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="菜单栏" />

        <Button Grid.Row="2"
                   Margin="10,0"
                   HorizontalAlignment="Right"
                   Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                   CommandParameter="{x:Static Dock.Bottom}"
                   Icon="&#xeb3a;"
                   Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                   ToolTip="状态栏" />-->


        <Grid Grid.Row="1">
            <h:LinkActionFrame LinkAction="{Binding SelectLink}" />
        </Grid>
    </Grid>
    <h:Interaction.Triggers>
        <h:EventTrigger EventName="Loaded">
            <h:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="AnimatedTab" />
        </h:EventTrigger>
    </h:Interaction.Triggers>
</UserControl>
