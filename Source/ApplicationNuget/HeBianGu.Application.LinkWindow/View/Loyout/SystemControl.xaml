                                <MenuItem Header="闪烁"/>
                                <MenuItem Header="上移"/>
                                <MenuItem Header="下移"/>
                            </MenuItem>
                            <MenuItem Header="转场效果"/>
                            <MenuItem Header="多彩文字"/>
                            <MenuItem Header="屏幕捕捉"/>
                            <MenuItem Header="图像展示"/>
                            <MenuItem Header="简易动画"/>
                            <MenuItem Header="Color Plus"/>
                        </MenuItem>
