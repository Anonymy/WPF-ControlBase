                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </GroupBox>

                            <GroupBox Header="参数设置" Grid.Row="2">
                                <GroupBox.Resources>
                                    <Style TargetType="Expander">

                                    </Style>
                                </GroupBox.Resources>
                            </GroupBox>
                        </Grid>
                        <GroupBox Header="项目预览" Grid.Column="2">
                            <Grid Background="White"/>
                        </GroupBox>
                    </Grid>

