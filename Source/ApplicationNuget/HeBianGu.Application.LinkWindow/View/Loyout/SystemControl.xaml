                            <MenuItem Header="四色设置">
                                <MenuItem Header="禁用"/>
                                <MenuItem Header="节能"/>
                                <MenuItem Header="高亮度"/>
                                <MenuItem Header="基本模式"/>
                                <MenuItem Header="白光模式"/>
