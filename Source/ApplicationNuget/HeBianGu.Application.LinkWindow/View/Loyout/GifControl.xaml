<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.GifControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox>
        <GroupBox Header="Gif播放器">
            <h:GifImage x:Name="GifImageMain" Margin="32">
                <h:GifImage.Source>
                    <BitmapImage UriSource="/HeBianGu.Applications.ControlBase.LinkWindow;component/Resources/动画封装.gif"/>
                </h:GifImage.Source>
            </h:GifImage>
        </GroupBox>
    </Viewbox>
</UserControl>
