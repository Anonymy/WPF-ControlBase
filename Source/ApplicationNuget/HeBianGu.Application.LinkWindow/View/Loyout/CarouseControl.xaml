<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.CarouseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"

             xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="1800">
    <Viewbox>
        <GroupBox Header="轮播控件">
            <h:CarouselControl IsCenter="True" AutoRun="True" Width="1200" Height="500" VerticalAlignment="Center">
                <Grid Width="1200" Background="Yellow"/>
                <Grid Width="1200" Background="Green"/>
                <Grid Width="1200" Background="Blue"/>
                <Grid Width="1200" Background="Red"/>
                <Grid Width="1200" Background="Black"/>
                <Grid Width="1200" Background="Purple"/>
            </h:CarouselControl>
        </GroupBox>
    </Viewbox>
</UserControl>
