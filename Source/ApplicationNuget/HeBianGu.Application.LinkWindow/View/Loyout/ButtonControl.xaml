<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:h="https://github.com/HeBianGu"
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             mc:Ignorable="d"
             d:DesignHeight="1450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <h:Interaction.Behaviors>
                    <h:FluidMoveBehavior AppliesTo="Self" Duration="00:00:01"  FloatAbove="True"/>
                </h:Interaction.Behaviors>

                <GroupBox Header="系统按钮">
                    <UniformGrid Columns="10">
                        <Button Content="默认按钮"/>
                        <Button Content="默认按钮" Width="120"/>

                        <Button Content="主题按钮" Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}"/>
                        <Button h:Cattach.Icon="&#xe909;"/>
                        <Button h:Cattach.Icon="&#xe909;" Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}"/>
                        <Button h:Cattach.Icon="&#xe6f2;" Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}" Content="组合按钮"/>
                        <Button h:Cattach.Icon="&#xe754;"  Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}" h:Cattach.CornerRadius="20"/>
                        <Button Content="组合按钮" Width="120" Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}"/>

                        <Button Style="{DynamicResource {x:Static h:ButtonKeys.Accent}}">
                            <Image Source="/Resources/logo.png"/>
                        </Button>

                     
                    </UniformGrid>
                </GroupBox>
                
                <GroupBox Header="默认按钮">
                    <UniformGrid>
                        <Button Content="默认按钮"/>

                        <Button>
                            <Image Source="/Resources/logo.png"/>
                        </Button>
                    </UniformGrid>
                </GroupBox>
                
                <GroupBox Header="等待按钮">
                    <StackPanel>
                        <CheckBox x:Name="cb" IsChecked="True" Content="激活等待"/>
                        <Button Content="等待的按钮" Margin="10" 
                               h:Cattach.IsBuzy="{Binding IsChecked,ElementName=cb}" 
                               />
                        <Button Content="保存的按钮"
                               Grid.Column="1"  Grid.Row="1"
                               h:Cattach.IsBuzy="{Binding IsChecked,ElementName=cb}"
                                h:Cattach.BuzyText="正在保存"
                               />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="倒计时按钮">
                    <StackPanel>
                        <CheckBox x:Name="cb1" IsChecked="True" Content="激活倒计时"/>

                        <!--<h:FButtonCountDown Content="倒计时" Style="{DynamicResource {x:Static h:ButtonKeys.Dynamic}
                            }" Count="10" Margin="10" IsActive="{Binding IsChecked,ElementName=cb1,Mode=TwoWay}" Command="{Binding RelayCommand}" CommandParameter="Button.ShowSnackMessage"/>-->
                        
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="透明背景按钮">
                    <StackPanel>
                        <Button Content="透明的按钮" Command="{Binding BusyCommand,ElementName=button}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                                h:Cattach.BuzyText="正在保存"
                               />

                        <Button Content="透明的按钮" Command="{Binding BusyCommand,ElementName=button}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                                h:Cattach.BuzyText="正在保存"
                               />
                        <Button Content="弹出蒙版消息框"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"
                               />

                        <Button  Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="首页" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                   BorderThickness="1,1,0,1" Width="100" 
                                                   Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
                                                   h:Cattach.MouseOverBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                   h:Cattach.PressBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               />

                            <Button Content="上一页" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                      BorderThickness="1,1,0,1"  Width="100" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
                                                    h:Cattach.MouseOverBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                   h:Cattach.PressBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               />


                            <Button Content="下一页" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                      BorderThickness="1,1,0,1"  Width="100" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                                                    h:Cattach.MouseOverBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                   h:Cattach.PressBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                               />

                            <Button Content="末页" BorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                     BorderThickness="1"  Width="100" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundDefault}}"
                                                    h:Cattach.MouseOverBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                                                   h:Cattach.PressBorderBrush="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}"
                               Grid.Column="1" Grid.Row="1" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               />
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="超链接按钮">
                    <StackPanel>
                        <Button Margin="3" Style="{StaticResource {x:Static h:ButtonKeys.Link}}">百度网盘</Button>
                        <Button h:Cattach.Icon="&#xe617;" Margin="3" Style="{StaticResource {x:Static h:ButtonKeys.Link}}">设备检测</Button>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="组合按钮">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <Button h:Cattach.Icon="&#xe619;" Margin="0,0,0,0" h:Cattach.CornerRadius="16,0,0,16" >放大</Button>
                        <Button h:Cattach.Icon="&#xe619;" Margin="0,0,0,0" h:Cattach.CornerRadius="0" >缩小</Button>
                        <Button h:Cattach.Icon="&#xe619;" Margin="0,0,0,0" h:Cattach.CornerRadius="0,16,16,0" >还原</Button>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="自定义形状按钮">
                    <StackPanel HorizontalAlignment="Center">

                        <Button h:Cattach.Icon="&#xe756;" Style="{StaticResource {x:Static h:ButtonKeys.Circle}}" Margin="4"/>

                        <Button h:Cattach.Icon="&#xe756;" Style="{StaticResource {x:Static h:ButtonKeys.CircleTransparent}}"  Margin="4"/>

                        <Button h:Cattach.Icon="&#xe756;" Content="圆角按钮" Style="{StaticResource {x:Static h:ButtonKeys.MouseOver}}"  Margin="4"/>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="自定义形状按钮">
                    <StackPanel HorizontalAlignment="Center">

                        <Button h:Cattach.Icon="&#xe756;" Style="{StaticResource  {x:Static h:ButtonKeys.MouseOver}}" Margin="4"/>

                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
