<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Mvc.MvcCenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Mvc"
             xmlns:h="https://github.com/HeBianGu"

             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource {x:Static h:BrushKeys.Gray}}"/>

        <Button HorizontalAlignment="Left" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               h:Cattach.Icon="&#xe921;" ToolTip="数据列表" Margin="10,0"
                               Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                               CommandParameter="{x:Static Dock.Left}"/>

        <Button HorizontalAlignment="Right" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               h:Cattach.Icon="&#xe616;" ToolTip="属性列表"  Margin="10,0"
                               Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                               CommandParameter="{x:Static Dock.Right}"/>

        <Button Grid.Row="2" HorizontalAlignment="Left" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               h:Cattach.Icon="&#xeb3a;" ToolTip="菜单栏" Margin="10,0"
                               Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                               CommandParameter="{x:Static Dock.Top}"/>

        <Button Grid.Row="2"  HorizontalAlignment="Right" Style="{StaticResource {x:Static h:ButtonKeys.Transparent}}" 
                               h:Cattach.Icon="&#xeb3a;" ToolTip="状态栏"  Margin="10,0"
                               Command="{x:Static h:DrawerHost.OpenDrawerCommand}"
                               CommandParameter="{x:Static Dock.Bottom}"/>
        <Grid Grid.Row="1">
            <ScrollViewer>
                <UniformGrid Columns="3" HorizontalAlignment="Center">
                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>

                    </h:PropertyGrid>

                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>
                    </h:PropertyGrid>

                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>
                    </h:PropertyGrid>
                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>
                    </h:PropertyGrid>
                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>
                    </h:PropertyGrid>
                    <h:PropertyGrid Grid.Row="1" Title="学生信息"  SelectObject="{StaticResource S.Student.HeBianGu}" >
                        <h:Interaction.Behaviors>
                            <h:MouseDragElementBehavior ConstrainToParentBounds="True"/>
                            <h:SelectZIndexElementBehavior/>
                        </h:Interaction.Behaviors>
                    </h:PropertyGrid>
      
                </UniformGrid>
            </ScrollViewer>

        </Grid>
    </Grid>

    <h:Interaction.Triggers>
        <h:EventTrigger EventName="MouseDoubleClick">
            <h:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </h:EventTrigger>
    </h:Interaction.Triggers>
</UserControl>
