<UserControl x:Class="HeBianGu.Application.PhoneWindow.View.Custom.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.PhoneWindow.View.Custom" xmlns:h="https://github.com/HeBianGu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static h:ButtonKeys.Transparent}}">
            <Setter Property="h:Cattach.Orientation" Value="Vertical"/>
            <Setter Property="h:Cattach.IconSize" Value="20"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="h:Cattach.Icon" Value="&#xe7fd;"/> 
            <Setter Property="Width" Value="Auto"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="{DynamicResource {x:Static h:BrushKeys.Accent}}" Height="{DynamicResource {x:Static h:SystemKeys.RowHeight}}" CornerRadius="{DynamicResource {x:Static h:CornerRadiusKeys.Top}}">
                <TextBlock Text="办税" FontSize="{DynamicResource {x:Static h:FontSizeKeys.Header4}}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static h:BrushKeys.ForegroundWhite}}"/>
            </Border>
            <ScrollViewer>
                <ItemsControl>
                    <GroupBox Header="专项附加扣除填报" Style="{StaticResource {x:Static h:GroupBoxKeys.UnderLine}}">
                        <UniformGrid Columns="2" Margin="0,10">

                            <Button Content="专项附加扣除填报"/> 
                            <Button Content="确认下一年度专项附加扣除"/>
                        </UniformGrid>
                    </GroupBox>

                    <GroupBox Header="税费申报" Style="{StaticResource {x:Static h:GroupBoxKeys.UnderLine}}">
                        <UniformGrid Columns="2"  Margin="0,10">

                            <Button Content="综合所得年度汇算"/>

                            <Button Content="更正申报和作废申报"/>
                        </UniformGrid>
                    </GroupBox>

                    <GroupBox Header="我的委托" Style="{StaticResource {x:Static h:GroupBoxKeys.UnderLine}}">
                        <UniformGrid Columns="2" Margin="0,10">
                            <Button Content="委托代理关系管理"/>
                        </UniformGrid>
                    </GroupBox>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
