<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="QQ:908293466"
                    xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  水平  -->
    <Style x:Key="{ComponentResourceKey ResourceId=S.Separator.Default, TypeInTargetAssembly={x:Type local:SeparatorKeys}}" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}" />
    </Style>

    <!--  垂直  -->
    <Style x:Key="{ComponentResourceKey ResourceId=S.Separator.Vertical, TypeInTargetAssembly={x:Type local:SeparatorKeys}}" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource {x:Static h:BrushKeys.BorderBrushDefault}}" />
    </Style>
</ResourceDictionary>
