<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="QQ:908293466"
                    xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/HeBianGu.General.WpfControlLib;component/Themes/Resource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  默认样式  -->
    <Style BasedOn="{StaticResource S.FButton.Style.Default}" TargetType="{x:Type local:FButton}" />
    <Style BasedOn="{StaticResource S.FTextBox.Default}" TargetType="{x:Type local:FTextBox}" />
    <!--<Style BasedOn="{StaticResource {x:Static local:ButtonKeys.Accent}}" TargetType="{x:Type Button}" />-->
    <Style BasedOn="{StaticResource {x:Static local:ButtonKeys.Accent}}" TargetType="{x:Type Button}" />
    <Style BasedOn="{StaticResource {x:Static h:ComboBoxKeys.Accent}}" TargetType="{x:Type ComboBox}" />
    <Style BasedOn="{StaticResource {x:Static h:DatePickerKeys.Accent}}" TargetType="{x:Type DatePicker}" />
    <Style BasedOn="{StaticResource DefaultListView}" TargetType="{x:Type ListView}" />
    <Style BasedOn="{StaticResource {x:Static h:DataGridKeys.Single}}" TargetType="{x:Type DataGrid}" />
    <Style BasedOn="{StaticResource S.ScrollBar.Accent}" TargetType="{x:Type ScrollBar}" />
    <Style BasedOn="{StaticResource {x:Static h:ScrollViewerKeys.Accent}}" TargetType="{x:Type ScrollViewer}" />
    <Style BasedOn="{StaticResource {x:Static h:ListBoxKeys.Accent}}" TargetType="{x:Type ListBox}" />
    <Style BasedOn="{StaticResource {x:Static h:SliderKeys.Accent}}" TargetType="{x:Type Slider}" />
    <Style BasedOn="{StaticResource {x:Static h:ProgressBarKeys.HandyAccent}}" TargetType="{x:Type ProgressBar}" />
    <Style BasedOn="{StaticResource {x:Static h:ContextMenuKeys.Accent}}" TargetType="{x:Type ContextMenu}" />
    <Style BasedOn="{StaticResource S.MenuItem.Accent}" TargetType="{x:Type MenuItem}" />
    <Style BasedOn="{StaticResource {x:Static h:MenuKeys.Accent}}" TargetType="{x:Type Menu}" />
    <Style BasedOn="{StaticResource {x:Static h:ExpanderKeys.Accent}}" TargetType="{x:Type Expander}" />
    <Style BasedOn="{StaticResource {x:Static h:TreeViewKeys.Accent}}" TargetType="{x:Type TreeView}" />
    <Style BasedOn="{StaticResource S.TreeViewItem.Default}" TargetType="{x:Type TreeViewItem}" />
    <Style BasedOn="{StaticResource {x:Static h:TabControlKeys.Accent}}" TargetType="{x:Type TabControl}" />
    <Style BasedOn="{StaticResource {x:Static h:TabItemKeys.Accent}}" TargetType="{x:Type TabItem}" />
    <Style BasedOn="{StaticResource {x:Static h:CheckBoxKeys.Single}}" TargetType="{x:Type local:FCheckBox}" />
    <Style BasedOn="{StaticResource {x:Static h:CheckBoxKeys.Single}}" TargetType="{x:Type CheckBox}" />
    <Style BasedOn="{StaticResource {x:Static h:GroupBoxKeys.Accent}}" TargetType="{x:Type GroupBox}" />
    <Style BasedOn="{StaticResource {x:Static h:RadioButtonKeys.Single}}" TargetType="{x:Type RadioButton}" />
    <Style BasedOn="{StaticResource {x:Static h:LabelKeys.Default}}" TargetType="{x:Type Label}" />
    <Style BasedOn="{StaticResource {x:Static h:ToggleButtonKeys.Single}}" TargetType="{x:Type ToggleButton}" />
    <Style BasedOn="{StaticResource {x:Static h:ToolTipkKeys.Accent}}" TargetType="{x:Type ToolTip}" />
    <Style BasedOn="{StaticResource {x:Static h:TextBoxKeys.Default}}" TargetType="{x:Type TextBox}" />
    <!--<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Static h:TextBlockKeys.Default}}"/>-->
    <Style BasedOn="{StaticResource {x:Static h:HyperlinkKeys.Default}}" TargetType="{x:Type Hyperlink}" />
    <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{DynamicResource {x:Static h:FontSizeKeys.Default}}" />
    </Style>

    <Style BasedOn="{StaticResource {x:Static h:SeparatorKeys.Default}}" TargetType="{x:Type Separator}" />

    <!--<Style TargetType="{x:Type Border}" BasedOn="{StaticResource {x:Static h:BorderKeys.Default}}"/>-->

    <Style x:Key="S.ComboBox.Label" BasedOn="{StaticResource {x:Static h:ComboBoxKeys.LabelAccent}}" TargetType="{x:Type ComboBox}" />
</ResourceDictionary>