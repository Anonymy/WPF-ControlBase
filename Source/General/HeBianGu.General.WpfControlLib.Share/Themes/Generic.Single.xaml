<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="QQ:908293466"
                    xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/HeBianGu.General.WpfControlLib;component/Themes/System.xaml" />
        <ResourceDictionary Source="/HeBianGu.General.WpfControlLib;component/Themes/Resource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  默认样式  -->
    <Style BasedOn="{StaticResource S.FButton.Style.Default}" TargetType="{x:Type local:FButton}" />
    <Style BasedOn="{StaticResource S.FTextBox.Default}" TargetType="{x:Type local:FTextBox}" />
    <Style BasedOn="{StaticResource {x:Static local:ButtonKeys.Single}}" TargetType="{x:Type Button}" />
    <!--<Style BasedOn="{StaticResource {x:Static local:ButtonKeys.Single}}" TargetType="{x:Type Button}" />-->

    <Style BasedOn="{StaticResource {x:Static h:ComboBoxKeys.Single}}" TargetType="{x:Type ComboBox}" />
    <Style BasedOn="{StaticResource {x:Static h:DatePickerKeys.Single}}" TargetType="{x:Type DatePicker}" />
    <Style BasedOn="{StaticResource DefaultListView}" TargetType="{x:Type ListView}" />
    <Style BasedOn="{StaticResource {x:Static h:DataGridKeys.Single}}" TargetType="{x:Type DataGrid}" />
    <Style BasedOn="{StaticResource S.ScrollBar.Single}" TargetType="{x:Type ScrollBar}" />
    <Style BasedOn="{StaticResource {x:Static h:ScrollViewerKeys.Single}}" TargetType="{x:Type ScrollViewer}" />
    <Style BasedOn="{StaticResource {x:Static h:ListBoxKeys.Single}}" TargetType="{x:Type ListBox}" />
    <Style BasedOn="{StaticResource {x:Static h:SliderKeys.Single}}" TargetType="{x:Type Slider}" />
    <Style BasedOn="{StaticResource {x:Static h:ProgressBarKeys.HandySingle}}" TargetType="{x:Type ProgressBar}" />
    <Style BasedOn="{StaticResource {x:Static h:ContextMenuKeys.Single}}" TargetType="{x:Type ContextMenu}" />
    <Style BasedOn="{StaticResource {x:Static h:ExpanderKeys.Single}}" TargetType="{x:Type Expander}" />
    <Style BasedOn="{StaticResource {x:Static h:TreeViewKeys.Single}}" TargetType="{x:Type TreeView}" />
    <Style BasedOn="{StaticResource S.TreeViewItem.Default}" TargetType="{x:Type TreeViewItem}" />
    <Style BasedOn="{StaticResource {x:Static h:TabControlKeys.Single}}" TargetType="{x:Type TabControl}" />
    <Style BasedOn="{StaticResource {x:Static h:TabItemKeys.Single}}" TargetType="{x:Type TabItem}" />
    <Style BasedOn="{StaticResource {x:Static h:CheckBoxKeys.Default}}" TargetType="{x:Type local:FCheckBox}" />
    <Style BasedOn="{StaticResource {x:Static h:CheckBoxKeys.Single}}" TargetType="{x:Type CheckBox}" />
    <Style BasedOn="{StaticResource {x:Static h:GroupBoxKeys.Single}}" TargetType="{x:Type GroupBox}" />
    <Style BasedOn="{StaticResource {x:Static h:RadioButtonKeys.Single}}" TargetType="{x:Type RadioButton}" />
    <Style BasedOn="{StaticResource {x:Static h:LabelKeys.Default}}" TargetType="{x:Type Label}" />
    <Style BasedOn="{StaticResource {x:Static h:MenuItemKeys.Single}}" TargetType="{x:Type MenuItem}" />
    <Style BasedOn="{StaticResource {x:Static h:MenuKeys.Single}}" TargetType="{x:Type Menu}" />
    <Style BasedOn="{StaticResource {x:Static h:ToggleButtonKeys.Single}}" TargetType="{x:Type ToggleButton}" />
    <Style BasedOn="{StaticResource {x:Static h:ToolTipkKeys.Single}}" TargetType="{x:Type ToolTip}" />
    <Style BasedOn="{StaticResource {x:Static h:TextBoxKeys.Default}}" TargetType="{x:Type TextBox}" />
    <Style BasedOn="{StaticResource {x:Static h:SeparatorKeys.Default}}" TargetType="{x:Type Separator}" />

    <Style x:Key="S.ComboBox.Label" BasedOn="{StaticResource {x:Static h:ComboBoxKeys.LabelSingle}}" TargetType="{x:Type ComboBox}" />
</ResourceDictionary>