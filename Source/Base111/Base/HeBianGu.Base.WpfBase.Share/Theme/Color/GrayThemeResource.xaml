<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="QQ:908293466"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!--  窗口阴影效果  -->
    <DropShadowEffect x:Key="S.DropShadowEffect.Window"
                      po:Freeze="True"
                      BlurRadius="20"
                      Direction="270"
                      Opacity="0.8"
                      RenderingBias="Performance"
                      ShadowDepth="0"
                      Color="#000000" />


    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.MouseOver.Background" Opacity="0.5" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="S.Brush.Accent.MouseOver" Opacity="0.7" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.9" Opacity="0.9" Color="{DynamicResource AccentColor}" />

    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.8" Opacity="0.8" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.7" Opacity="0.7" Color="{DynamicResource AccentColor}" />

    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.6" Opacity="0.6" Color="{DynamicResource AccentColor}" />

    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.5" Opacity="0.5" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.4" Opacity="0.4" Color="{DynamicResource AccentColor}" />

    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.3" Opacity="0.3" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.2" Opacity="0.2" Color="{DynamicResource AccentColor}" />

    <!--  半透明的主色调 一般用于MouseOver  -->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.1" Opacity="0.1" Color="{DynamicResource AccentColor}" />

    <!--  磨砂窗体背景色调  -->
    <SolidColorBrush x:Key="S.Brush.WindowBackground" Opacity="0.15" Color="{DynamicResource AccentColor}" />

    <SolidColorBrush x:Key="S.Brush.Share.UnEnbled.Background" Color="#dcdcdc" />

    <SolidColorBrush x:Key="S.Brush.Share.UnEnbled.Foreground" Color="#f8f8f8" />

    <!--  用于内容域、面板底色  -->
    <SolidColorBrush x:Key="S.Brush.LightGray.Notice" Color="#2c2c2c" />

    <!--  用于透明背景内容域、面板底色  -->
    <SolidColorBrush x:Key="S.Brush.LightGray.NoticeOpacity.5" Opacity="0.5" Color="#2c2c2c" />

    <!--  用于边框、分割线  -->
    <SolidColorBrush x:Key="S.Brush.Gray.Notice" Color="#000000" />

    <SolidColorBrush x:Key="S.Brush.Gray.Notice.Opacity.5" Opacity="0.5" Color="#000000" />

    <!--  黄色  用于提示文字和图标  -->
    <SolidColorBrush x:Key="S.Brush.Orange.Notice" Color="#f7b61f" />

    <!--  黑色 用于提示文字和图标  -->
    <SolidColorBrush x:Key="S.Brush.Black.Notice" Color="#374857" />

    <!--  黑色 用于提示文字和图标  -->
    <SolidColorBrush x:Key="S.Brush.Dark.10" Color="#000000" />
    <SolidColorBrush x:Key="S.Brush.Dark.9" Color="#2c2c2c" />
    <SolidColorBrush x:Key="S.Brush.Dark.8" Color="#515151" />
    <SolidColorBrush x:Key="S.Brush.Dark.7" Color="#8a8a8a" />
    <SolidColorBrush x:Key="S.Brush.Dark.6" Color="#707070" />
    <SolidColorBrush x:Key="S.Brush.Dark.5" Color="#bfbfbf" />
    <SolidColorBrush x:Key="S.Brush.Dark.4" Color="#cdcdcd" />
    <SolidColorBrush x:Key="S.Brush.Dark.3" Color="#dbdbdb" />
    <SolidColorBrush x:Key="S.Brush.Dark.2" Color="#e6e6e6" />
    <SolidColorBrush x:Key="S.Brush.Dark.1" Color="#ffffff" />
    <SolidColorBrush x:Key="S.Brush.Dark.0" Color="#959595" />

    <!--  红色 用于警告文字和图标  -->
    <SolidColorBrush x:Key="S.Brush.Red.Notice" Color="#d81e06" />
    <SolidColorBrush x:Key="S.Brush.Red.Notice.Opactiy.8" Opacity="0.8" Color="#d81e06" />
    <SolidColorBrush x:Key="S.Brush.Red.Notice.Opactiy.6" Opacity="0.6" Color="#d81e06" />
    <SolidColorBrush x:Key="S.Brush.Red.Notice.Opactiy.4" Opacity="0.4" Color="#d81e06" />
    <SolidColorBrush x:Key="S.Brush.Red.Notice.Opactiy.2" Opacity="0.2" Color="#d81e06" />

    <!--  绿色 用于提示文字和图标  -->
    <SolidColorBrush x:Key="S.Brush.Green.Notice" Color="#FF029900" />

    <!--  面板、标题、输入框底色  -->
    <SolidColorBrush x:Key="S.Brush.White.Notice" Color="#bfbfbf" />

    <SolidColorBrush x:Key="S.Brush.White.Opactiy.8" Opacity="0.8" Color="#bfbfbf" />

    <SolidColorBrush x:Key="S.Brush.White.Opactiy.6" Opacity="0.6" Color="#bfbfbf" />

    <SolidColorBrush x:Key="S.Brush.White.Opactiy.4" Opacity="0.4" Color="#bfbfbf" />

    <SolidColorBrush x:Key="S.Brush.White.Opactiy.2" Opacity="0.2" Color="#bfbfbf" />

    <SolidColorBrush x:Key="S.Brush.White.Opactiy.1" Opacity="0.1" Color="#bfbfbf" />


    <SolidColorBrush x:Key="S.Brush.TextForeground.White" Color="#fafafa" />

    <SolidColorBrush x:Key="S.Brush.TextForeground.White.Opacity.8" Opacity="0.8" Color="#fafafa" />
    <SolidColorBrush x:Key="S.Brush.TextForeground.White.Opacity.6" Opacity="0.6" Color="#fafafa" />
    <SolidColorBrush x:Key="S.Brush.TextForeground.White.Opacity.4" Opacity="0.4" Color="#fafafa" />
    <SolidColorBrush x:Key="S.Brush.TextForeground.White.Opacity.2" Opacity="0.2" Color="#fafafa" />
    <SolidColorBrush x:Key="S.Brush.TextForeground.White.Opacity.1" Opacity="0.1" Color="#fafafa" />

    <!--  重要文字信息及标题  -->
    <SolidColorBrush x:Key="S.Brush.TextForeground.Title" Color="#000000" />

    <!--  用于普通文字、内容信息  -->
    <SolidColorBrush x:Key="S.Brush.TextForeground.Default" Color="#2c2c2c" />


    <SolidColorBrush x:Key="S.Brush.TextForeground.MouseOver" Opacity="0.1" Color="#2c2c2c" />

    <SolidColorBrush x:Key="S.Brush.TextForeground.Selected" Opacity="0.18" Color="#2c2c2c" />

    <!--  用于标注、辅助文字  -->
    <SolidColorBrush x:Key="S.Brush.TextForeground.Assist" Color="#515151" />

    <!--  用于链接文字文字  -->
    <SolidColorBrush x:Key="S.Brush.TextForeground.Link" Color="#6296d8" />

    <!--  用于面板底色内容域底色  -->
    <SolidColorBrush x:Key="S.Brush.TextBackground.Default" Color="#cdcdcd" />

    <!--  用于边框、分割线  -->
    <SolidColorBrush x:Key="S.Brush.TextBorderBrush.Default" Color="#515151" />

    <!--  换行显示的颜色  -->
    <SolidColorBrush x:Key="S.Brush.RowIndex.BackGround" Color="#515151" />

    <SolidColorBrush x:Key="S.Brush.Dialog.Cover" Opacity="0.6" Color="#000000" />

    <Color x:Key="S.EffectShadow.Color.Default">#707070</Color>

