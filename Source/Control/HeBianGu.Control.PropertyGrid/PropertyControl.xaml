            </Grid.ColumnDefinitions>

            <!--<Slider Value="{Binding Value}" Grid.Column="0" h:Cattach.Title="{Binding Name}" SmallChange="1" Margin="5,0" Style="{DynamicResource {x:Static h:SliderKeys.Label}}"
